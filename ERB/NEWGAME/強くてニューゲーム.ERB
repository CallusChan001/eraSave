		CFLAG:LOCAL:(LOCAL:1 + 100) = 前回の胖次:LOCAL:(LOCAL:1)
	NEXT
	CFLAG:LOCAL:口上用引継ぎ枠 = 前回のCFLAG:LOCAL
	;無接吻経験のリセット
	SIF EXP:LOCAL:接吻経験 == 0
		 TALENT:LOCAL:無接吻経験 = 1
NEXT

