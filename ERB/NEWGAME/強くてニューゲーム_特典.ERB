;-----------------------------------------------------------
;陥落角色の素質変更
;-----------------------------------------------------------
@周回特典
PRINTL
PRINTL
PRINTL ＊周回特典＊
PRINTL 可以改变以前作为恋人的角色的素质
PRINTL 可以改变以前获得爱慕或者爱欲的角色的部分素质
PRINTL
PRINTL
CALL 周回特典_角色選択
SELECTCASE RESULT
	CASE 999
		RETURN
	;CASE 997
	;	CALL SaveTalentSet
	CASE 998
		CALL LoadTalentSet
	CASEELSE
		IF GETBIT(CFLAG:RESULT:继承, 1)
			CALL CUSTOM_TERMINAL(RESULT, 1)
		ELSEIF GETBIT(CFLAG:RESULT:继承, 0)
			CALL LIMITED_CUSTOM(RESULT)
		ENDIF
ENDSELECT
RESTART

;-----------------------------------------------------------
;-----------------------------------------------------------
@周回特典_角色選択
;生成
LOCAL:1 = 0
FOR LOCAL, 0, CHARANUM
	IF !IS_NAMED(LOCAL)
		CONTINUE
	ENDIF
	SIF SuccSetting:LOCAL
		FONTBOLD
	IF GETBIT(CFLAG:LOCAL:继承, 1)
		SETCOLOR C_PINK
		PRINTFORMLC [{LOCAL, 3}] %CALLNAME:LOCAL%
		LOCAL:1 ++
	ELSEIF GETBIT(CFLAG:LOCAL:继承, 0)
		SETCOLOR C_YELLOW
		PRINTFORMLC [{LOCAL, 3}] %CALLNAME:LOCAL%
		LOCAL:1 ++
	ENDIF
NEXT
RESETCOLOR
FONTREGULAR
;其他の選択肢
PRINTL
DRAWLINE
;PRINTL [997] 保存继承设定
PRINTL [998] 读取继承设定
DRAWLINE
PRINTL [999] 设定完毕
PRINTL
;入力受付
DO
	INPUT
	SELECTCASE RESULT
	;CASE 997
	;	RETURN RESULT
	CASE 998
		RETURN RESULT
	CASE 999
		RETURN RESULT
	CASEELSE
		SIF IS_NAMED(RESULT) && (GETBIT(CFLAG:RESULT:继承, 1) || GETBIT(CFLAG:RESULT:继承, 0))
			RETURN RESULT
	ENDSELECT
	CLEARLINE 1
LOOP 1

