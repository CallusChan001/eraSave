;@SaveTalentSet
;#DIM C_ID
;FOR C_ID,1,CHARANUM
;	FOR LOCAL, 0, 160
;		TalentSet:C_ID:LOCAL = TALENT:C_ID:LOCAL
;	NEXT
;NEXT
;FLAG:引継ぎ設定保存済み = CHARANUM - 1
;PRINTFORMW 继承設定保存完毕
;-----------------------------------------------------------
@SAVE_CUSTOM_TALENT(C_ID, ARGS)
#DIM C_ID
LOCALS = 保存現在的設定
CALL ASK_M(@"保存现在的设定",1, "重置保存的设定", SuccSetting:C_ID ,"中止",1)
SELECTCASE RESULT
	CASE 0
		FOR LOCAL, 0, 160
			TalentSet:C_ID:LOCAL = TALENT:C_ID:LOCAL
		NEXT
		SuccSetting:C_ID = 1
		IF ARGS == "恋人"
			SuccBASE:C_ID:0 = MAXBASE:C_ID:0
			SuccBASE:C_ID:1 = MAXBASE:C_ID:1
			SuccSetting:C_ID = 2
			FOR LOCAL,0,100
				SuccABL:C_ID:LOCAL = ABL:C_ID:LOCAL
				SuccEXP:C_ID:LOCAL = EXP:C_ID:LOCAL
			NEXT
		ENDIF
		PRINTFORMW 已保存%CALLNAME:C_ID%的设置。
	CASE 1
		VARSET TalentSet:C_ID:0, 0
		SuccSetting:C_ID = 0
		PRINTFORMW 已重置%CALLNAME:C_ID%的设置。
	CASE 2
ENDSELECT
;-----------------------------------------------------------
@LoadTalentSet
#DIM C_ID
;IF !FLAG:引継ぎ設定保存済み
;	THROW 继承設定がありません。
;ENDIF
FOR C_ID, 1, CHARANUM
	SIF !SuccSetting:C_ID
		CONTINUE
	FOR LOCAL,0,160
		TALENT:C_ID:LOCAL = TalentSet:C_ID:LOCAL
	NEXT
	IF SuccSetting:C_ID == 2
		MAXBASE:C_ID:0 = SuccBASE:C_ID:0
		MAXBASE:C_ID:1 = SuccBASE:C_ID:1
		FOR LOCAL,0,100
			ABL:C_ID:LOCAL = SuccABL:C_ID:LOCAL
			EXP:C_ID:LOCAL = SuccEXP:C_ID:LOCAL
		NEXT
	ENDIF
	PRINTFORML 读取了%CALLNAME:C_ID%的继承设定
NEXT

;-----------------------------------------------------------
;周回時恋慕特典によるカスタマイズ用
;-----------------------------------------------------------
@LIMITED_CUSTOM(ARG)
#DIMS choices, 10
#DIM part
;表示
PRINTL
PRINTL
PRINTFORML %NAME:ARG%
PRINTFORML 现在的体型: %GET_TALENTNAME(100,TALENT:ARG:100)%
PRINTFORML 现在的胸围: %GET_TALENTNAME(105,TALENT:ARG:105)%
FOR LOCAL, 101, 107
	IF LOCAL == 105
		CONTINUE
	ENDIF
	PRINTFORM %TALENT_TR(LOCAL)%：
	SELECTCASE TALENT:ARG:LOCAL
		CASE -1
			PRINTFORM 钝感　
		CASE 0
			PRINTFORM 普通　
		CASE 1
			PRINTFORM 敏感　
	ENDSELECT
NEXT
PRINTFORML 
DRAWLINE
;選択肢
VARSET choices
choices:0 '= "体型变更", "胸围变更", "臀围变更", "感度变更", "全部位敏感","设定保存"
CALL ASK_CHOICES(choices, 100, "结束")
SELECTCASE RESULT
	CASE 100
		RETURN
	CASE 0
		VARSET choices
		choices:0 '= "小人", "", "", "幼儿体型", "矮小体型", "普通", "高大", "巨躯"
		CALL ASK_CHOICES(choices, 100, "返回")
		SELECTCASE RESULT
			CASE 0, 3 TO 7
				TALENT:ARG:体型 = RESULT - 5
		ENDSELECT
	CASE 1
		VARSET choices
		choices:0 '= "绝壁", "贫乳", "普乳", "巨乳", "爆乳"
		CALL ASK_CHOICES(choices, 100, "返回")
		SELECTCASE RESULT
			CASE 0 TO 4
				TALENT:ARG:胸圍 = RESULT - 2
		ENDSELECT
	CASE 2
		VARSET choices
		choices:0 '= "幼臀", "小臀", "纤臀", "翘臀", "丰臀"
		CALL ASK_CHOICES(choices, 100, "返回")
		SELECTCASE RESULT
			CASE 0 TO 4
				TALENT:ARG:ヒップサイズ = RESULT - 2
		ENDSELECT
	CASE 3
		VARSET choices
		FOR LOCAL, 1, 7
			IF LOCAL == 5
				CONTINUE
			ENDIF
			choices:LOCAL '= TALENT_TR(LOCAL + 100)
		NEXT
		CALL ASK_CHOICES(choices, 100, "返回")
		part = RESULT + 100
		SELECTCASE TALENTNAME:part
			CASE "Ｃ感度", "Ｖ感度", "Ａ感度", "Ｂ感度", "Ｍ感度"
				CALL ASK_M("钝感",1,"普通",1,"敏感",1)
				TALENT:ARG:part = RESULT - 1
		ENDSELECT
	CASE 4
		FOR LOCAL, 101, 107
			IF LOCAL == 105
				CONTINUE
			ENDIF
			TALENT:ARG:LOCAL = 1
		NEXT
	CASE 5
		CALL SAVE_CUSTOM_TALENT(ARG, "恋慕")
ENDSELECT
RESTART