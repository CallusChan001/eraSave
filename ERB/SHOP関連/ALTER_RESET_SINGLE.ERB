@ALTER_RESET_CHARA_MAIN()
#DIM CHARA
PRINTFORML 请选择要切换或重置的角色
PRINTFORML 如果需要切换剧本，则一定会重置某些记录进度的标志和变量，以确保不会出现BUG
CALL SHOW_CHARA_LIST("现有的角色列表")
CHARA = RESULT
IF CHARA != 999

	PRINTFORML 确定要重置%CALLNAME:CHARA%吗?
	CALL ASK_YN("Y","N")
	IF RESULT == 0
		
		CFLAG:CHARA:口上実装状況 = 0
		CALL KOJO_MULTIPLE(CHARA,4)
		;重置的简易版
		CALL RESET_KOJO_CHARA(CHARA,1)
		CALL RESET_KOJO_CHARA_EXPABL(CHARA)
	ENDIF
ENDIF

@RESET_KOJO_CHARA_EXPABL(CHARA)
#DIM CHARA
CALL ASK_YN("重置好感信赖度","不重置好感信赖度")
IF RESULT == 0
	CFLAG:CHARA:好感度 = 0
	CFLAG:CHARA:信賴度 = 0
	PRINTFORML %CALLNAME:CHARA%的好感信赖度重置了。
ENDIF
CALL ASK_YN("重置经验EXP","不重置经验EXP")
IF RESULT == 0
	FOR LOCAL,0,111
		EXP:CHARA:LOCAL = CSVEXP(CHARA,LOCAL)
	NEXT
	PRINTFORML %CALLNAME:CHARA%的经验重置了。
ENDIF

CALL ASK_YN("重置能力ABL","不重置能力ABL")
IF RESULT == 0
	FOR LOCAL,0,100
		ABL:CHARA:LOCAL = CSVABL(CHARA,LOCAL)
	NEXT
	PRINTFORMW %CALLNAME:CHARA%的能力重置了。
ENDIF

