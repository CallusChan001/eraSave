;-----------------------------------------------------------
;原木・青竹の名称を装飾名も含めて返す関数
;FLAG_L …FLAG:原木種類　（木材種番号でも通る）
;TEXT =1 「の大木・の巨木」を文字列に反映しない
;      省略した場合は =0 (巨木・大木表示あり)
;RETURNF 1～ 普通の木 100～ 〇〇の大木 200～ 〇〇の巨木
;-----------------------------------------------------------
@WOOD_NAME(FLAG_L, TEXT = 0)
#FUNCTIONS
#DIM FLAG_L
#DIM TEXT
#DIM 番号
#DIMS 名前

SELECTCASE FLAG_L
	CASE 101 TO 199
		番号 = FLAG_L - 100
	CASE 201 TO 299
		番号 = FLAG_L - 200
	;logging tweak
	CASE 301 TO 399
		番号 = FLAG_L - 300
	CASE 401 TO 499
		番号 = FLAG_L - 400
	CASEELSE
		番号 = FLAG_L
ENDSELECT


SELECTCASE 番号
	CASE 1 TO 11
		名前 = %WoodName%
	CASEELSE
		名前 = %WoodName%
		RETURNF 名前
ENDSELECT

IF TEXT == 0
	SELECTCASE FLAG_L
		CASE 101 TO 199
			名前 += " (大)"
		CASE 201 TO 299
			名前 += " (巨大)"
