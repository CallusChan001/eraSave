		ENDIF
		IF FLAG:70
			BASE:MASTER:TSP -= 減少値
		ELSE
			DOWNBASE:MASTER:体力 += 減少値 ;tweaked to stack with chopping cost
			IF ITEM:チェーンソー
				;added line
				PRINTFORML 你的饮水机帮助你更快恢复了！
				DOWNBASE:MASTER:気力 += 減少値 - (GETBIT(nChainSawMods, ChainSaw_MiniFanDispenser) ? 75 # 50)
			ELSE
				DOWNBASE:MASTER:気力 += 減少値 - 25
			ENDIF
			TIME += 伐採時間
			;logging tweak
			IF PERCENT(nLuck)
				LOCAL:0 = RAND:5 + RAND:5 + RAND:3
				LOCAL:1 = RAND:5 + RAND:5 + RAND:3
				MAXBASE:MASTER:体力 += LOCAL:0
				MAXBASE:MASTER:気力 += LOCAL:1
				SIF LOCAL:0 + LOCAL:1
					PRINTFORMW 劈砍原木一番锻炼后，你感觉自己变得更强壮了一些……
			ENDIF
		ENDIF
	ENDIF
	;木材数の増加処理
	CALL GET_ITEM("木材", FireWood, 2)
	RETURN 1
ELSE
	IF FLAG_L
		CLEARLINE 5
		PRINTFORMW 原木的话要么带去人间之里木材商那里、要么带去山里的制材所那里……
	ENDIF
	RETURN -1
ENDIF
