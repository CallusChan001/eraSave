;-----------------------------------------------------------
;伐採スポットから伐れる木材種を割り出す関数
;-----------------------------------------------------------
@WOOD_SPECIES(伐採可能, nLuck) ;logging tweak
#DIM 伐採可能
#DIM W_ID
#DIM nLuck

$LOOP

W_ID = 1 + RAND:20 ;logging tweak, lower the rand size since there aren't many trees right now (was RAND:49)
SIF PERCENT(nLuck + TFLAG:幸運補正) ;logging tweak
	W_ID = TOINT(SPLIT_G("2:6:7:7:8:9:13:13"))
;変数を読み込み
CALL WoodData(W_ID)

;無名（未登録）ならリターン
SIF WoodName == ""
	GOTO LOOP
SIF WoodValue_Log == 0
	GOTO LOOP
;[希少]は１／２で再抽選に
SIF STRCOUNT(WoodTribe, "希少/") && !PERCENT(nLuck + TFLAG:幸運補正) ;logging tweak
	GOTO LOOP
SELECTCASE 伐採可能
	CASE 1;鎮守の森、妖精の大樹
		SIF STRCOUNT(WoodTribe, "博/")
			RETURN W_ID
	CASE 2;斜角の竹林
		SIF STRCOUNT(WoodTribe, "竹/")
			RETURN W_ID
	CASE 3;魔法の森、キノコ群生地
		SIF STRCOUNT(WoodTribe, "森/")
			RETURN W_ID
	CASE 4;森の深奥
		SIF STRCOUNT(WoodTribe, "深/")
			RETURN W_ID
	CASE 5;絶景の丘、山頂
		SIF STRCOUNT(WoodTribe, "山/")
			RETURN W_ID
	CASEELSE
		;エラーによる無限ループ除け
		RETURN W_ID
ENDSELECT
;樹木関連の変数をリセット
CALL WOOD_V_RESET

GOTO LOOP

