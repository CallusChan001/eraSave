@SWEEPGOD_AUTO_SWEEP_COM
#LOCALSIZE 1
#LOCALSSIZE 1
SWEEPGOD = 3
;我不知道为什么要call20次，但就这样做吧，顺带扫除中移出来了，不然太刷屏了
PRINTFORML -------------------------扫除中----------------------------
FOR LOCAL, 0, 20
	CALL AUTO_SWEEP
	IF RESULT != 1
		CALL SWEEPGOD_AUTO_SWEEP_FAIL_INFO
		LOCAL -= 1
		BREAK
	ENDIF
NEXT
PRINTFORMW 一键扫除了{LOCAL}次
;都在里面吃了一次经验和消耗了凭啥外面还吃一遍啊……
[SKIPSTART]
;清掃経験は10~20上昇
SWEEPEXP_OLD = EXP:MASTER:清掃経験
EXP:MASTER:清掃経験 += (10 + RAND: (10) )
SWEEPEXP_NEW = EXP:MASTER:清掃経験
PRINTFORMW 清掃経験 +%TOSTR(SWEEPEXP_NEW - SWEEPEXP_OLD)%
BASE:MASTER:体力 -= 10 * (SWEEPEXP_NEW - SWEEPEXP_OLD + 5)
BASE:MASTER:気力 -= 15 * (SWEEPEXP_NEW - SWEEPEXP_OLD + 5)
TIME += 15
[SKIPEND]
SWEEPGOD = 1

@SWEEPGOD_AUTO_SWEEP_SKIP_MOVE
#LOCALSIZE 1
#LOCALSSIZE 1
SWEEPGOD = 2
;这里19就够了，因为原版应该自带一次
FOR LOCAL, 0, 19
	CALL AUTO_SWEEP
	IF RESULT != 1
		LOCAL -= 1
		BREAK
	ENDIF
NEXT
PRINTFORMW 一键扫除了{LOCAL}次
SWEEPGOD = 1

@SWEEPGOD_AUTO_SWEEP_FAIL_INFO
#LOCALSIZE 1
#LOCALSSIZE 1
SELECTCASE RESULT
	CASE -1
		PRINTFORML 已经没有精力再去扫地了……
	CASE -2
		PRINTFORML 醉成这样再扫地会弄得更脏乱的……
	CASE -3
		PRINTFORML 与人同行的时候就不要顺路扫除了吧……
	CASE -4
		PRINTFORML 感觉已经足够干净了，可以到此为止了
ENDSELECT
