@MOREDATEDLC

IF MOREDATE == 0
	MOREDATE = 1
	;Add current date as first date in the array in case player turns this on mid-day
	IF FLAG:デート相手
		NumberOfDates = 1
		Datees:0 = FLAG:デート相手
		DatesPrevLike:0 = TFLAG:デート前好感度
	ENDIF
ELSE
	MOREDATE = 0
	;Make current focused date the only date
	FOR LOCAL, 0, NumberOfDates
		IF FLAG:デート相手 != Datees:LOCAL
			CFLAG:(Datees:LOCAL):デート中 = MAIN_MAP
			CFLAG:(Datees:LOCAL):同行 = 0
		ENDIF
	NEXT
	NumberOfDates = 0
	Datees = 0
	DatesPrevLike = 0
ENDIF
	
