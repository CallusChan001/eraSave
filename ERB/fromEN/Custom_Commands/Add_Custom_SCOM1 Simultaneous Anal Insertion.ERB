;轮流A插入, very similar to alternate anal insertion, but with higher values and different dialogue
@ADD_CUSTOM_SCOM1
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:0 射精対象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI）
;TCVAR:1 予備射精対象フラグ（ビットを使いたくない人用、CFLAG:100に翻訳されます）	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI）
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手）
;二人目
LOCAL = MASTER_POSE(SET_A,SET_P,1)

LOCALS = {TARGET}/{LOCAL}/
CSTR:PLAYER:10 += LOCALS
TCVAR:MASTER:2 = 2
;強度
TCVAR:MASTER:4 = 2500

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

DOWNBASE:PLAYER:体力 += 60
DOWNBASE:PLAYER:気力 += 60

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 55
	SOURCE:MASTER:快Ｃ = 1035
	FOR LOCAL:1,0,2
		IF LOCAL:1 == 0
			LOCAL:2 = TARGET
		ELSE
			LOCAL:2 = LOCAL
		ENDIF
		SOURCE:(LOCAL:2):快Ａ = 460
		SOURCE:(LOCAL:2):苦痛 = 260

		;Aへの苦痛は先に処理しておく
		CALL PAIN_CHECK_A(LOCAL:2)
	NEXT
ELSE

	DOWNBASE:体力 += 50
	DOWNBASE:気力 += 110
	SOURCE:MASTER:快Ｃ = 1035

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	FOR LOCAL:1,0,2
		IF LOCAL:1 == 0
			LOCAL:2 = TARGET
		ELSE
			LOCAL:2 = LOCAL
		ENDIF

		SOURCE:(LOCAL:2):快Ａ = 460
		SOURCE:(LOCAL:2):情愛 = 210
		SOURCE:(LOCAL:2):苦痛 = 510
		SOURCE:(LOCAL:2):露出 = 80
		SOURCE:(LOCAL:2):反感 = 350
		SOURCE:(LOCAL:2):性行動 = 300
		;上のほうで計算した汚れデータ
		SOURCE:(LOCAL:2):不潔 = Y*10 + 60

		;抑圧、抵抗持ちには、抑鬱ソース追加
		SIF TALENT:(LOCAL:2):自己愛 < 0 || TALENT:(LOCAL:2):抵抗
			SOURCE:(LOCAL:2):鬱屈 += 310

		;貞操観念持ちで恋慕、親愛持ち以外には常に反発のソースを追加する（セックス系のみ）
		SIF TALENT:(LOCAL:2):貞操 > 0 && !TALENT:(LOCAL:2):恋慕
			SOURCE:(LOCAL:2):反感 += 1300

		;Vへの苦痛は先に処理しておく
		CALL PAIN_CHECK_A(LOCAL:2)
	NEXT
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;膣内に破瓜の血の汚れを付加
;奴隷のＡ⇔調教者のＰの汚れが移動
STAIN:PLAYER:2 |= STAIN:4
STAIN:PLAYER:2 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:2
STAIN:7 |= STAIN:PLAYER:2
;助手のＡ⇔調教者のＰの汚れが移動
STAIN:PLAYER:2 |= STAIN:LOCAL:4
STAIN:PLAYER:2 |= STAIN:LOCAL:7
STAIN:LOCAL:4 |= STAIN:PLAYER:2
STAIN:LOCAL:7 |= STAIN:PLAYER:2
;奴隷のＡ⇔調教者のＰの汚れが移動
STAIN:PLAYER:2 |= STAIN:4
STAIN:PLAYER:2 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:2
STAIN:7 |= STAIN:PLAYER:2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:挿入経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,LOCAL)
	EXP:LOCAL:(50 + HETEROSEX(TARGET,LOCAL)) += 3
	EXP:TARGET:(50 + HETEROSEX(TARGET,LOCAL)) += 3
ENDIF
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(LOCAL,PLAYER)
	EXP:LOCAL:(50 + HETEROSEX(LOCAL,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(LOCAL,PLAYER)) += 3
ENDIF

IF FLAG:70 == 1
	EXP:MASTER:時姦経験 += 1
ELSE
	EXP:Ａ性交経験 ++
	EXP:LOCAL:Ａ性交経験 ++
	IF !ASSIPLAY
		EXP:愛情経験 += TALENT:恋慕 * 2
	ENDIF
ENDIF
Qol_Info_Count_Array:TARGET:Qol_Count_ASex ++ ;qol custom code
Qol_Info_Count_Array:LOCAL:Qol_Count_ASex ++ ;qol custom code
IF FLAG:70 == 1 || CFLAG:イタズラ
	Qol_Info_Count_Array:TARGET:Qol_Count_UncASex ++ ;qol custom code
	Qol_Info_Count_Array:LOCAL:Qol_Count_UncASex ++ ;qol custom code
ENDIF
RETURN 1

