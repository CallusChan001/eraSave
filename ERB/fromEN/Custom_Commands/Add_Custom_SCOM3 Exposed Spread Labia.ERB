@ADD_CUSTOM_SCOM3
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET
;奉仕快楽
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 50
DOWNBASE:気力 += 90

SOURCE:快Ｃ = 43
SOURCE:達成 = 20
SOURCE:恐怖 = 180
SOURCE:液体 = 12
SOURCE:露出 = 450
SOURCE:屈従 = 600
SOURCE:逸脱 = 450
SOURCE:反感 = 450
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 150

;処女&&無自覚非処女、貞操観念
IF TALENT:処女 == 1 || TALENT:処女 == -1
	TIMES SOURCE:恐怖 , 1.20
	TIMES SOURCE:屈従 , 1.20
	TIMES SOURCE:反感 , 1.20
	SOURCE:露出 += 300
	IF TALENT:貞操 > 0
		TIMES SOURCE:露出 , 2.00
		TIMES SOURCE:逸脱 , 2.00
	ENDIF
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＶ⇔指の汚れが移動
STAIN:3 |= STAIN:1
STAIN:1 |= STAIN:3
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;露出癖Lv3以上で自慰経験加算
SIF ABL:露出癖 >= 3
	EXP:自慰経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
RETURN 1

