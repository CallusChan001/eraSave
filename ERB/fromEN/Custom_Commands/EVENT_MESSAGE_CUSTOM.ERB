@CUSTOM_EVENT_MESSAGE_1(SELECTED_SWIMWEAR,ARG:1,ARG:2,ARG:3)
#DIM BIKINI
#DIM MICRO_BIKINI
#DIM SCHOOL_SWIMSUIT
#DIM COMPETITION_SWIMSUIT
#DIM ONE_PIECE_SWIMSUIT
#DIM SLING_SWIMSUIT
#DIM SWIMMING_TRUNKS
#DIM SWIM_DIAP
#DIM SELECTED_SWIMWEAR

IF !BIKINI ;only fetch ids once, since they're not character-dependent
	SWIMMING_TRUNKS = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "泳裤装")
	BIKINI = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "比基尼套装")
	MICRO_BIKINI = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "迷你比基尼套装")
	SCHOOL_SWIMSUIT = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "死库水泳衣")
	COMPETITION_SWIMSUIT = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "竞技泳衣")
	ONE_PIECE_SWIMSUIT = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "连体泳衣")
	SLING_SWIMSUIT = OBJNAME_TO_ID(TARGET, "GET", "衣装セット", "Y字泳衣")
	;SWIM_DIAP = OBJNAME_TO_ID(ARG, "GET", "衣装セット", "Swim Diaper Set")
ENDIF
IF TARGET == MASTER
	PRINTFORML %CALLNAME:MASTER%迅速换上了泳装。
ELSEIF CFLAG:TARGET:現在位置 == CFLAG:MASTER:現在位置 ;only show dialogue if present
	IF !SELECTED_SWIMWEAR
		IF TARGET == 15		;咲夜
			PRINTFORML %CALLNAME:TARGET%不知何时摁下了自己随身携带的怀表
			PRINTFORML 眨眼间便一丝不挂地出现在%CALLNAME:MASTER%的眼前。
		ELSEIF TARGET == 93	;若鹜姬
			PRINTFORML %CALLNAME:TARGET%微微一笑，钻入水中
			PRINTFORML 不一会儿便片缕不着地浮出水面。		
		ELSE
			PRINTFORML %CALLNAME:TARGET%找了一块岩石放好了自己的衣服
			PRINTFORML 不久后便光溜溜地回来了。
		ENDIF
	ELSE
		IF TARGET == 15		;咲夜
			PRINTFORML %CALLNAME:TARGET%不知何时摁下了自己随身携带的怀表
			PRINTFORM 眨眼间便换上了
		ELSEIF TARGET == 93	;若鹜姬
			PRINTFORML %CALLNAME:TARGET%微微一笑，钻入水中
			PRINTFORM 不一会儿钻出来时，便已经换上了		
		ELSEIF ABL:TARGET:露出癖 < 5 || (GET_TARGETNUM() > 1 && ABL:TARGET:露出癖 < 10)
			PRINTFORML %CALLNAME:TARGET%挪到附近一块岩石后面，换起了泳装
			PRINTFORM 回来时穿着
		ELSE
			PRINTFORML %CALLNAME:TARGET%丝毫不在意\@ GET_TARGETNUM() > 1 ? 旁人 # +++ \@的视线，换上了泳装
			PRINTFORM 没过多久就换好了
		ENDIF
		SELECTCASE SELECTED_SWIMWEAR
			CASE SWIM_DIAP
				PRINTFORML 一条防水的尿不湿。
			CASE BIKINI
				PRINTFORML 一件可爱的比基尼，完美衬托出%HE_SHE_CN(TARGET)%的身材。
			CASE MICRO_BIKINI
				PRINTFORM 一件大胆的超小比基尼，
				SELECTCASE TALENT:TARGET:胸圍
					CASE -3
						PRINTFORML 穿在%HE_SHE_CN(TARGET)%平坦的胸部上显得非常别扭。
					CASE -3
						PRINTFORML 根本不适合%HE_SHE_CN(TARGET)%那小小的胸部。
					CASE -1
						PRINTFORML 与%HE_SHE_CN(TARGET)%纤细的身材形成鲜明对比。
					CASE 0
						PRINTFORML 让%HE_SHE_CN(TARGET)%散发出成熟的气息。
					CASE 1
						PRINTFORML 让%HE_SHE_CN(TARGET)%的胸部更加突出。
					CASE 2, 3, 4
						PRINTFORML 完全束缚不住%HE_SHE_CN(TARGET)%的丰满胸部。
				ENDSELECT
			CASE SCHOOL_SWIMSUIT
				PRINTFORML 一件印有%HE_SHE_CN(TARGET)%名字的学校泳衣。
				SIF TALENT:TARGET:胸圍 > 0
					PRINTFORML 但是，\@ TALENT:TARGET:ヒップサイズ > 0 ? 胸部和胯部 # 胸部 \@绷得相当紧。
				SIF TALENT:TARGET:ヒップサイズ > 0 && TALENT:TARGET:胸圍 <= 0
					PRINTFORML 然而，胯部的布料绷得相当紧。
			CASE COMPETITION_SWIMSUIT
				PRINTFORML 一件运动型且舒适的泳衣。
			CASE ONE_PIECE_SWIMSUIT
				PRINTFORML 一件可爱的连体泳衣。
			CASE SLING_SWIMSUIT
				PRINTFORM 一件非常暴露的Y字高叉泳衣，
				SELECTCASE TALENT:TARGET:胸圍
					CASE -2,-3
						PRINTFORML 穿在%HE_SHE_CN(TARGET)%身上，与其说色情不如说更显可爱。
					CASE -1
						PRINTFORML 穿在%HE_SHE_CN(TARGET)%身上，与其说大胆不如说更显可爱。
					CASE 0
						PRINTFORML 令人想入非非的部位若隐若现。
					CASE 1
						PRINTFORML 完全起不到蔽体的作用，反而更显诱惑。
					CASE 2,3,4
						PRINTFORML 完全起不到蔽体的作用，紧绷在%HE_SHE_CN(TARGET)%丰满的胸部上。
				ENDSELECT
			CASE SWIMMING_TRUNKS
				IF IS_MALE(TARGET)
					PRINTFORM 一条简单的泳裤
				ELSE
					PRINTFORM 一条男式泳裤
				ENDIF
				SELECTCASE TALENT:TARGET:ヒップサイズ
					CASE -3
						PRINTFORML ，对于%HE_SHE_CN(TARGET)%太大了，不得不一直往上提。
					CASE -2
						PRINTFORML ，似乎有点大了。
					CASE -1
						PRINTFORML ，几乎垂到%HE_SHE_CN(TARGET)%的膝盖。
					CASE 0
						PRINTFORML 。
					CASE 1
						PRINTFORML ，似乎有点小了。
					CASE 2
						PRINTFORML ，裹着%HE_SHE_CN(TARGET)%%HIP(TARGET)%，更像是热裤。
					CASE 3
						PRINTFORML ，几乎遮不住%HE_SHE_CN(TARGET)%%HIP(TARGET)%。
					CASE 4
						PRINTFORML ，几乎遮不住%HE_SHE_CN(TARGET)%%HIP(TARGET)%。
				ENDSELECT
			CASEELSE
		ENDSELECT
	ENDIF
ENDIF
