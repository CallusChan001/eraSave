;handjob
@ADD_SEX_ACTION_1_3(ARG, MULTIPLIER)
#DIM MULTIPLIER
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:ARG:116 = ARG
;奉仕快楽
TCVAR:ARG:108 = 1

CSTR:PLAYER:10 += @"{ARG}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:PLAYER:2 = 3
;強度
TCVAR:PLAYER:4 = MULTIPLY(700, MULTIPLIER)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF ABL:指 < 4 || FLAG:70
	SOURCE:PLAYER:快Ｃ += MULTIPLY(80, MULTIPLIER)
ELSE
	SOURCE:PLAYER:快Ｃ += ABL:指 * MULTIPLY(20, MULTIPLIER)
ENDIF

;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40

ELSE

	DOWNBASE:ARG:体力 += 10
	DOWNBASE:ARG:気力 += 60

	SOURCE:ARG:情愛 = MULTIPLY(50, MULTIPLIER)
	SOURCE:ARG:性行動 = MULTIPLY(250, MULTIPLIER)
	SOURCE:ARG:達成 = MULTIPLY(50, MULTIPLIER)
	SOURCE:ARG:屈従 = MULTIPLY(350, MULTIPLIER)
	SOURCE:ARG:逸脱 = 100
	SOURCE:ARG:反感 = 100

	;上のほうで計算した汚れデータ
	SOURCE:ARG:不潔 = Y*10 + 60

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:自己愛 < 0 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 200
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;奴隷の指⇔調教者のＰの汚れが移動
STAIN:ARG:1 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:ARG:1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;手淫経験
SIF !FLAG:70 && !CFLAG:ARG:イタズラ
	EXP:ARG:手淫経験 ++

RETURN 1

@ADD_SEX_ABLE_1_3(ARG)
;手淫実行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(80)
	RETURN RESULT
SIF FLAG:70
	RETURN 0
;調教者がオトコか半人半妖かふたなりじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;縄使用中は不可
SIF TEQUIP:ARG:縄
	RETURN 0
RETURN 1

