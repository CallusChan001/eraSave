@ADD_SEX_ACTION_4_2(ARG, MULTIPLIER)
#DIM MULTIPLIER
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:ARG:116 = PLAYER
;奉仕快楽
TCVAR:PLAYER:108 = 1

CSTR:ARG:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:ARG:2 = 4
;強度
TCVAR:ARG:4 = MULTIPLY(500, MULTIPLIER)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:ARG:快Ｃ = MULTIPLY(80, MULTIPLIER)
	SOURCE:PLAYER:快Ｍ += MULTIPLY(50, MULTIPLIER)
	SOURCE:ARG:液体 = MULTIPLY(1000, MULTIPLIER)
	;性技補正
	IF ABL:PLAYER:舌 >= 4
		SOURCE:ARG:快Ｃ += MULTIPLY(100, MULTIPLIER)
		SOURCE:ARG:液体 += MULTIPLY(400, MULTIPLIER)
	ELSE
		SOURCE:ARG:快Ｃ += MULTIPLY(ABL:PLAYER:舌 * 20, MULTIPLIER)
		SOURCE:ARG:液体 += MULTIPLY(ABL:PLAYER:舌 * 80, MULTIPLIER)
	ENDIF

	;口淫経験
	EXP:PLAYER:口淫経験 ++
;時間停止なし
ELSE
	DOWNBASE:ARG:体力 += 5
	DOWNBASE:ARG:気力 += 50
	SOURCE:PLAYER:快Ｍ += MULTIPLY(50, MULTIPLIER)
	SOURCE:ARG:快Ｃ = MULTIPLY(80, MULTIPLIER)
	SOURCE:ARG:液体 = MULTIPLY(1000, MULTIPLIER)
	SOURCE:ARG:露出 = MULTIPLY(10, MULTIPLIER)
	SOURCE:ARG:逸脱 = 15
	SOURCE:ARG:反感 = 15

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:自己愛 < 0 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 20

	;性技補正
	IF ABL:PLAYER:舌 >= 4
		SOURCE:ARG:快Ｃ += MULTIPLY(100, MULTIPLIER)
		SOURCE:ARG:液体 += MULTIPLY(400, MULTIPLIER)
	ELSE
		SOURCE:ARG:快Ｃ += MULTIPLY(ABL:PLAYER:舌 * 20, MULTIPLIER)
		SOURCE:ARG:液体 += MULTIPLY(ABL:PLAYER:舌 * 80, MULTIPLIER)
	ENDIF

	;口淫経験
	EXP:PLAYER:口淫経験 ++
ENDIF
Qol_Info_Count_Array:ARG:Qol_Count_MSexCunni += EXP_UP(GETNUM(EXP, "口淫経験"), PLAYER) ;qol custom code
;-------------------------------------------------
;時間停止分岐終わり、共通する素質補正や汚れの処理
;-------------------------------------------------
;舌を使う調教では、調教者の舌使いによって、快感のソース増加
IF TALENT:PLAYER:舌使い
	TIMES SOURCE:ARG:快Ｃ , 1.50
	TIMES SOURCE:ARG:液体 , 1.50
ENDIF
;猫舌では減少、調教者に嗜虐快楽経験を追加
IF TALENT:PLAYER:猫舌
	TIMES SOURCE:ARG:快Ｃ , 0.75
	EXP:PLAYER:嗜虐快楽経験 += 1
ENDIF

;奴隷のＶ⇔調教者の口の汚れが移動
STAIN:ARG:Ｖ |= STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:ARG:Ｖ

RETURN 1

