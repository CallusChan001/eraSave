	SIF TEQUIP:ARG:縄
		RETURN 0
ENDIF
;調教者がオトコか半人半妖かふたなりじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
SIF TEQUIP:ARG:継続キス
	RETURN 0
;上半身着衣
SIF TEQUIP:ARG:1 > 1 && TEQUIP:ARG:3 == 0
	RETURN 0
RETURN 1

