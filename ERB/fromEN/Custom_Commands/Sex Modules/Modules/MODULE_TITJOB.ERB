@ADD_SEX_ACTION_1_5(ARG, MULTIPLIER)
#DIM MULTIPLIER
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:ARG:116 = ARG
;奉仕快楽
TCVAR:ARG:108 = 1

CSTR:PLAYER:10 += @"{ARG}/"
;TCVAR:2 射精箇所フラグ（-1=コンドーム 1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:PLAYER:2 = 5
;射精快感強度
TCVAR:PLAYER:4 += MULTIPLY(1200, MULTIPLIER)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60
	SOURCE:ARG:快Ｂ = MULTIPLY(150, MULTIPLIER)
	SOURCE:PLAYER:快Ｃ += MULTIPLY(110, MULTIPLIER)
ELSE

	DOWNBASE:体力 += 10
	DOWNBASE:気力 += 100
	SOURCE:PLAYER:快Ｃ += MULTIPLY(110, MULTIPLIER)
	;性技補正
	SOURCE:PLAYER:快Ｃ += MULTIPLY(MIN(ABL:胸 * 25,100), MULTIPLIER)

	SOURCE:ARG:快Ｂ = MULTIPLY(50, MULTIPLIER)
	SOURCE:ARG:情愛 = MULTIPLY(150, MULTIPLIER)
	SOURCE:ARG:性行動 = MULTIPLY(400, MULTIPLIER)
	SOURCE:ARG:達成 = MULTIPLY(200, MULTIPLIER)
	SOURCE:ARG:屈従 = MULTIPLY(1000, MULTIPLIER)
	SOURCE:ARG:逸脱 = 500
	SOURCE:ARG:反感 = 500

	;上のほうで計算した汚れデータ
	SOURCE:ARG:不潔 = Y*10 + 60

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:ARG:鬱屈 += 600
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者のＰの汚れが移動
STAIN:ARG:5 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:ARG:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1 || CFLAG:ARG:イタズラ
ELSE
	EXP:ARG:パイズリ経験 += 2
	;愛情経験
	SIF TALENT:ARG:恋慕 == 1 && ASSIPLAY == 0
		EXP:ARG:愛情経験 ++
ENDIF
RETURN 1

@ADD_SEX_ABLE_1_5(ARG)
