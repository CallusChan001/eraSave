;実際に能力のソートを行う
@SORT_能力(角色列表, 页番号, 入力値, 最大列表角色番号)
#DIM REF 角色列表
#DIM REF 页番号
#DIM REF 最大列表角色番号
#DIM 入力値
#DIM 参照する能力
#DIM 角色登録番号
#DIM 列表番号


入力値 -= 2000
参照する能力 = 入力値

;降序にする場合
IF ソート項目:入力値 == 0
	SELECTCASE 参照する能力
		;体力气力
		CASE 1 TO 2
			参照する能力 --
		;Ｃ感覚からＭ感覚まで
		CASE 11 TO 15
			参照する能力 -= 11
		;親密従順欲望技巧
		CASE 16 TO 19
			参照する能力 -= 7
		;性技
		CASE 21 TO 26
			参照する能力 += 29
		;刻印(時姦刻印以外)
		CASE 31 TO 34
			参照する能力 -= 31
		;刻印(時姦刻印)
		CASE 35
			参照する能力 = 5
		;好感度
		CASE 41
			参照する能力 = 2
		;信賴度
		CASE 42
			参照する能力 = 4
		CASEELSE
			PRINTW 変数値が異常です(能力表示.ERB @SORT_能力)
	ENDSELECT
	
	;見る場所がBASEだったりABLだったりMARKだったりするので页で分けて分かりやすく
	;0页目の場合(参照部分BASE)
	IF 页番号 == 0
		FOR LOCAL:0,1,最大列表角色番号
			FOR LOCAL:1,LOCAL:0 +1,最大列表角色番号+1
				IF BASE:(角色列表:(LOCAL:0)):(参照する能力) < BASE:(角色列表:(LOCAL:1)):(参照する能力)
					LOCAL:2 = 角色列表:(LOCAL:0)
					角色列表:(LOCAL:0) = 角色列表:(LOCAL:1)
					角色列表:(LOCAL:1) = LOCAL:2
				ENDIF
			NEXT
		NEXT
	;1页目の場合(参照部分ABL)
	ELSEIF 页番号 == 1
		FOR LOCAL:0,1,最大列表角色番号
			FOR LOCAL:1,LOCAL:0 +1,最大列表角色番号+1
				IF ABL:(角色列表:(LOCAL:0)):(参照する能力) < ABL:(角色列表:(LOCAL:1)):(参照する能力)
					LOCAL:2 = 角色列表:(LOCAL:0)
					角色列表:(LOCAL:0) = 角色列表:(LOCAL:1)
					角色列表:(LOCAL:1) = LOCAL:2
				ENDIF
			NEXT
		NEXT
	;2页目の場合(参照部分ABL)
	ELSEIF 页番号 == 2
		FOR LOCAL:0,1,最大列表角色番号
			FOR LOCAL:1,LOCAL:0 +1,最大列表角色番号+1
				IF ABL:(角色列表:(LOCAL:0)):(参照する能力) < ABL:(角色列表:(LOCAL:1)):(参照する能力)
					LOCAL:2 = 角色列表:(LOCAL:0)
					角色列表:(LOCAL:0) = 角色列表:(LOCAL:1)
					角色列表:(LOCAL:1) = LOCAL:2
				ENDIF
			NEXT
		NEXT
	;3页目の場合(参照部分MARK)
	ELSEIF 页番号 == 3
		FOR LOCAL:0,1,最大列表角色番号
			FOR LOCAL:1,LOCAL:0 +1,最大列表角色番号+1
				IF MARK:(角色列表:(LOCAL:0)):(参照する能力) < MARK:(角色列表:(LOCAL:1)):(参照する能力)
