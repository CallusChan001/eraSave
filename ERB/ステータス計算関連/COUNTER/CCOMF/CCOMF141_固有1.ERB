;*********************************************************************************************
;カウンターコマンド：固有１
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF141(ARG)
CALL UNIQUE_COUNTER(ARG, 1)
RETURN RESULT

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE141(ARG)
CALL UNIQUE_COUNTER_ABLE(ARG, 1)
RETURN RESULT

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER141(コマンド番号, ARG, 基本値)
#DIM コマンド番号
#DIM 基本値
CALL UNIQUE_COUNTER_ORDER(コマンド番号, ARG, 基本値, 1)
RETURN RESULT

@UNIQUE_COUNTER(CHARA, INDEX)
#DIM CHARA
#DIM INDEX
LOCAL = TARGET
TARGET = CHARA
CALL KOJO_ACTIVE_INFO(CHARA)
TRYCALLFORM UNIQUE_COUNTER{INDEX}_SOURCE_K{NO:CHARA}%RESULTS%
TARGET = LOCAL
RETURN 1

@UNIQUE_COUNTER_ABLE(CHARA, INDEX)
#DIM CHARA
#DIM INDEX
CALL KOJO_ACTIVE_INFO(CHARA)
RESULT = 0
LOCAL = TARGET
TARGET = CHARA
TRYCALLFORM UNIQUE_COUNTER{INDEX}_ABLE_K{NO:CHARA}%RESULTS%
TARGET = LOCAL
RETURN RESULT

@UNIQUE_COUNTER_ORDER(コマンド番号, CHARA, 基本値, INDEX)
#DIM コマンド番号
#DIM 基本値
#DIM CHARA
#DIM INDEX

CALL KOJO_ACTIVE_INFO(CHARA)
LOCALS '= RESULTS
RESULT = 0
RESULTS =
LOCAL = TARGET
TARGET = CHARA
TRYCALLFORM UNIQUE_COUNTER{INDEX}_FREQUENCY_K{NO:CHARA}%LOCALS%
TARGET = LOCAL

	;=============================
	LOCAL = 基本値 + RESULT
	;カウンタータイプ別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(RESULTS, CHARA)
RETURN LOCAL
