		ELSEIF SELECTCOM == 44
			CALL SET_HISTORY_LOST_V(喪失者No, 取得者No, "振动棒")
		ELSE
			CALL SET_HISTORY_LOST_V(喪失者No, 取得者No, "阴茎")
