	;替换用画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立絵種類
			;顔絵
		ELSE
			;立絵
		ENDIF
	ELSE
		;服
		IF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
			IF FLAG:立絵種類
				;顔絵
				RESULTS = _バニー
