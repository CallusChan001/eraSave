			IF GROUPMATCH(CFLAG:[[正邪]]:差し替え適用, 2)
				IF TCVAR:CHARA:弾幕勝負結果 == 1
					RESULTS = _ボロ
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSE
	;通常画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立絵種類
			;顔絵
		ELSE
			;立絵
		ENDIF
	ELSE
		;服
		IF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
			IF FLAG:立絵種類
				;顔絵
				RESULTS = _バニー
			ELSE
				;立絵
				RESULTS = _バニー
			ENDIF
		ENDIF
	ENDIF
ENDIF

;IMAGE_I97_特殊表情(CHARA)--------------------------------------------------------------------
;キャラクター特有の表情表示条件
;時間停止中でも維持する表情はこちら
;使用時注意点:
;	RESULTS:0に表情を格納
;	RESULTS:1にマウスオーバー時の表情を格納すること
;	"通常","笑顔","憤怒","発情","睡眠"は本編で実装済み
;-------------------------------------------------------------------------------------------
@IMAGE_I97_特殊表情(CHARA)
#DIM CHARA

IF CFLAG:[[正邪]]:差し替え適用
	;差し替え画像
	IF FLAG:立ち絵種類
		;顔絵
		IF GROUPMATCH(CFLAG:[[正邪]]:差し替え適用, 2)
			IF CFLAG:CHARA:睡眠 ;prevents overlapping status breaking the sprite
				RESULTS:0 = 睡眠
				RESULTS:1 = 睡眠
			ELSE
				SIF TCVAR:CHARA:弾幕勝負結果 == 1 && RESULTS:0 == "通常"
					RESULTS:0 = 恥ずい
				IF IS_FALLEN(97) && GROUPMATCH(RESULTS:0, "通常", "笑顔", "憤怒")
					RESULTS:0 '= @"%RESULTS:0%" + "1"
				ENDIF
			ENDIF
		ENDIF
	ELSE
		;立ち絵
		IF GROUPMATCH(CFLAG:[[正邪]]:差し替え適用, 2)
			SIF TCVAR:CHARA:弾幕勝負結果 == 1 && RESULTS:0 == "通常"
				RESULTS:0 = 恥ずい
		ENDIF
	ENDIF
ELSE
	;通常画像
	IF FLAG:立ち絵種類
		;顔絵
	ELSE
		;立ち絵
	ENDIF
ENDIF

;IMAGE_I97_特殊表情COM(CHARA, コマンド)-------------------------------------------------------
;直前のコマンドで変化するキャラクター特有の表情表示条件
;時間停止中は変化しない表情はこちら
;使用時注意点:
;	RESULTS:0に表情を格納
;	RESULTS:1にマウスオーバー時の表情を格納すること
;	"オナニー","愛撫","性交"は本編で実装済み
;-------------------------------------------------------------------------------------------
@IMAGE_I97_特殊表情COM(CHARA, コマンド)
#DIM CHARA
#DIM コマンド

IF CFLAG:[[正邪]]:差し替え適用
	;差し替え画像
	IF FLAG:立ち絵種類
		;顔絵
		IF GROUPMATCH(CFLAG:[[正邪]]:差し替え適用, 2)
			SIF RESULTS:0 == "性交"
				RESULTS:0 '= @"性交%COND_STR("1", RAND:2 > 0)%"
			SIF RESULTS:0 == "愛撫"
				RESULTS:0 '= @"愛撫%COND_STR("1", RAND:2 > 0)%"
		ENDIF
	ELSE
		;立ち絵
	ENDIF
ELSE
	;通常画像
	IF FLAG:立ち絵種類
		;顔絵
	ELSE
		;立ち絵
	ENDIF
ENDIF

