;IMAGE_I58_特殊服装(CHARA)-------------------------------------------------------------------
;キャラクター特有の服装表示条件
;エフェクトを共有する服装差分はこちらで指定する
;使用時注意点:
;	RESULTSに特殊服装を格納すること
;	書式は %服装%%特殊服装% 適宜"_"等入れること
;-------------------------------------------------------------------------------------------
@IMAGE_I58_特殊服装(CHARA)
#DIM CHARA
VARSET RESULTS

IF CFLAG:58:差し替え適用
	;差し替え画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立ち絵種類
			;顔絵
		ELSE
			;立ち絵
		ENDIF
	ELSE
		;服
		IF FLAG:立ち絵種類
			;顔絵
			IF GROUPMATCH(CFLAG:58:差し替え適用, 2)
				IF CHECK_CLO("bra_visible", CHARA)
					RESULTS = _下着
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _バニー
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 62
					RESULTS = _変T
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 74
					RESULTS = _セーラー
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 73
					RESULTS = _生足
				ENDIF
			ELSEIF GROUPMATCH(CFLAG:58:差し替え適用, 2)
				IF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _バニー
				ENDIF
			ELSEIF GROUPMATCH(CFLAG:58:差し替え適用, 4)
				IF CURRENT_CLOTHES_SET(CHARA) == 51
					RESULTS = _女仆装
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _兔女郎
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 74
					RESULTS = _水手服
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == [[晚宴礼服套装]]
					RESULTS = _礼服
				ELSEIF CHK_DATENOW(CFLAG:CHARA:约会中)
					IF DAY:0 % 2
						RESULTS = _白旗袍
					ELSE
						RESULTS = _黑旗袍
					ENDIF
				ENDIF
			ENDIF
		ELSE
			;立ち絵
			IF GROUPMATCH(CFLAG:58:差し替え適用, 2)
				IF CHECK_CLO("bra_visible", CHARA) && EQUIP:CHARA:下半身下着２ != 0
					RESULTS = _下着
				ELSEIF CHECK_CLO("bra_visible", CHARA) && EQUIP:CHARA:下半身下着２ == 0
					RESULTS = _ノーパン下着
				{
				ELSEIF (!EQUIP:CHARA:上半身上着１ && !EQUIP:CHARA:上半身上着２ && !EQUIP:CHARA:外衣 &&
						!EQUIP:CHARA:着物 && !EQUIP:CHARA:ワンピース &&
						!EQUIP:CHARA:レオタード && !EQUIP:CHARA:ボディースーツ) &&
						EQUIP:CHARA:下半身下着２ != 0
				}
					RESULTS = _ノーブラ下着
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _バニー
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 62
					RESULTS = _変T
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 74
					RESULTS = _セーラー
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 73
					IF EQUIP:CHARA:下半身下着２ == 0
						RESULTS = _生足ノーパン
					ELSE
						RESULTS = _生足
					ENDIF
				ENDIF
			ELSEIF GROUPMATCH(CFLAG:58:差し替え適用, 2)
				IF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _バニー
				ENDIF
			ELSEIF GROUPMATCH(CFLAG:58:差し替え適用, 4)
				IF CURRENT_CLOTHES_SET(CHARA) == 51
					RESULTS = _女仆装
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 55 || CURRENT_CLOTHES_SET(CHARA) == 66
					RESULTS = _兔女郎
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == 74
					RESULTS = _水手服
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == [[晚宴礼服套装]]
					RESULTS = _礼服
				ELSEIF CURRENT_CLOTHES_SET(CHARA) == [[生足美鈴套]]
					IF DAY:0 % 2
						RESULTS = _白旗袍
					ELSE
						RESULTS = _黑旗袍
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSE
	;通常画像
	IF CHECK_NUDE(CHARA)
		;裸
		IF FLAG:立ち絵種類
			;顔絵
		ELSE
			;立ち絵
		ENDIF
	ELSE
		;服
		IF FLAG:立ち絵種類
			;顔絵
		ELSE
			;立ち絵
		ENDIF
	ENDIF
ENDIF

