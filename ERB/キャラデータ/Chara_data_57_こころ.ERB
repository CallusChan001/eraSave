@キャラデータ57(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS DYNAMIC O_DATA
#DIMS DYNAMIC V_NAME
SELECTCASE O_DATA
CASE "稱呼"
	CALLF MAKE_STR(V_NAME, "心")
;こっから衣装設定
CASE "今天的睡衣"
	CALLF MAKE_STR(V_NAME, "睡衣（裤子+兜帽）套")

CASE "便装：帽子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("帽子", "面"))
CASE "便装：靴"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("靴", "鞋子"))
CASE "便装：襪子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("襪子", "袜子"))
CASE "便装：裙子"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("裙子", "长裙"))
CASE "便装：上身衣服２"
	CALLF MAKE_INT(V_NAME, CLOTHES_ID("上身衣服２", "女式衬衫"))

;けして開放式胖次ではない
CASE "固有内衣形容詞"
	CALLF MAKE_STR(V_NAME, "各种笑脸面具的")
CASE "固有下半身内衣名"
	CALLF MAKE_STR(V_NAME, "镂空胖次")
CASE "固有上半身内衣"
	CALLF MAKE_INT(V_NAME, 0)
CASE "固有内衣着用条件"
	SIF !RAND:(1 + (2 * 勝負内衣判定([[心]])))
		CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(前)"
	CALLF MAKE_INT(V_NAME, 1)
CASE "固有内衣半透明(後)"
	CALLF MAKE_INT(V_NAME, 1)

;料理関連
CASE "料理：喜欢的味道"
	CALLF MAKE_STR(V_NAME, "米/果物/和食/煮物/垃圾/淡白/豪華/芸術的/新鲜/软糯的/辣/辣/咸/咸/")
CASE "料理：讨厌的味道"
	CALLF MAKE_STR(V_NAME, "濃厚/酸/酸/" + "青蛙/虫肉/謎料理/" * 3)
CASE "料理：助手効果"
	CALLF MAKE_STR(V_NAME, "彩り/")
;贈り物関連
CASE "感性：好き"
	CALLF MAKE_STR(V_NAME, "粉色/美的/芸術的/和風/誇張/不思議/" + "精神/音楽/面/蜃気楼の/" * 3 + "心の/希望の/舞踊の/感情の/" * 5)
CASE "感性：嫌い"
	CALLF MAKE_STR(V_NAME, "別緻/洋風/" + "生体品/护臂/" * 3)
ENDSELECT

