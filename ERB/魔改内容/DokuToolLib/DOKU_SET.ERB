@DOKU_SET_TALK_UNABLE(ARG,ARG:1,ARG:2=0)
IF !ARG:2
TCVAR:ARG:301 = ARG:1 + 1
ELSE
TCVAR:ARG:301 += ARG:1
ENDIF
SIF TCVAR:ARG:301 >=100
TCVAR:ARG:302 = 1
RETURN 0

@DOKU_SET_MOOD(ARG,ARG:1)
IF ARG:1 < -1
;惹火了
CALL GET_ANGRY(60,((-1 * ARG:1) - 1))
ELSEIF ARG:1 == -1
;只是心情不好
TALENT:ARG:15 = -1 
ELSEIF ARG:1 == 1
;好心情
TALENT:ARG:15 = 1
ELSEIF ARG:1 == 0
;通常
TALENT:ARG:15 = 0
ENDIF
RETURN 0

@DOKU_SET_HP_MAX(ARG)
BASE:ARG:0 = MAXBASE:ARG:0
BASE:ARG:1 = MAXBASE:ARG:1
RETURN 0