@GIFT_ADJECTIVE_TR(ARGS)
#LOCALSIZE 1
#LOCALSSIZE 1
#FUNCTIONS
SIF ARGS == ""
RETURNF
IF MAP_HAS(TASTE_MAP, ARGS)
	LOCALS '= MAP_GET(TASTE_MAP, ARGS)
ELSE
	LOCALS '= ARGS
	;#;PRINTFORML ※未能找到%ARGS%翻译，请保存日志报错
ENDIF
RETURNF STRLENS(LOCALS) == 4 ? REPLACE(LOCALS, "的", "之") # LOCALS


@GIFT_NOUN_TR(ARGS)
#LOCALSIZE 1
#LOCALSSIZE 1
#FUNCTIONS
SIF ARGS == ""
RETURNF
SIF MAP_HAS(TASTE_MAP, ARGS)
	RETURNF MAP_GET(TASTE_MAP, ARGS)
	;#;PRINTFORML ※未能找到%ARGS%翻译，请保存日志报错
RETURNF ARGS


@GIFTSHOP_NAME_TR(ARGS)
#LOCALSIZE 1
#LOCALSSIZE 1
#FUNCTIONS
SELECTCASE ARGS
	CASE "香霖堂"
		RETURNF "香霖堂"
	CASE "土産屋"
		RETURNF "土特产店"
	CASEELSE 
		RETURNF ARGS
ENDSELECT

@CREATE_GIFT_NAME_TR(strMain, strAdj)
#FUNCTIONS
#DIMS strMain
#DIMS strAdj
#LOCALSIZE 1
#LOCALSSIZE 1
RETURNF GIFT_ADJECTIVE_TR(strAdj) + GIFT_NOUN_TR(strMain)