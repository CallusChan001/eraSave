;------------------------------------------
;角色(ARG)が地点(ARG:1)に居る時に接受体力への増減値    当角色(ARG)位于地点(ARG:1)时，体力值的增减
;移動傾向でも使用ので関数に分離    也用于移动趋势分析，故将其分离为函数
;------------------------------------------
@天候造成的影響(ARG, ARG:1)
#LOCALSIZE 1
#LOCALSSIZE 1
#FUNCTION
VARSET LOCAL
;屋外、傘装備無、相合伞してない    屋外、无伞、无相合伞
IF !IS_NO_RAIN(VISITOR_LOCATION(ARG:1)) && OUTROOF(ARG:1) && EQUIP:ARG:飾品 != 6 && !TEQUIP:ARG:相合伞
	;你は傘を持っていれば除外
	SIF ARG == MASTER && ITEM:折り畳み傘 && !nDontUseUmbrella ;addition custom code
		RETURNF 0
	SELECTCASE TIME:天気
		;夏の晴天
		CASE 天气_少云
			SIF DAY:季節 == 季节_夏 && (TALENT:ARG:吸血鬼 || TALENT:ARG:水棲 || TALENT:ARG:氷精 == 2) ;bugfix custom code
				LOCAL = -2
		;夏の晴天
		CASE 天气_晴
			SIF DAY:季節 == 季节_夏 && (TALENT:ARG:吸血鬼 || TALENT:ARG:水棲 || TALENT:ARG:氷精 == 2) ;bugfix custom code
				LOCAL = -3
		;雨・霧雨
		CASE 天气_雨, 天气_雾雨
			IF TALENT:ARG:水棲
				LOCAL = 3
			ELSE
				LOCAL = -2
			ENDIF
		;雪・細雪・霧雪・雨雪交加
		CASE 天气_雪, 天气_细雪, 天气_雾雪, 天气_雨夹雪
			IF TALENT:ARG:氷精
				LOCAL = 3
			ELSE
				LOCAL = -2
			ENDIF
		;大雨
		CASE 天气_大雨
			IF TALENT:ARG:水棲
				LOCAL = 3
			ELSE
				LOCAL = -3
			ENDIF
		;吹雪(天候パッチ)冰雹
		CASE 天气_大雪, 天气_冰霰
			IF TALENT:ARG:氷精
				LOCAL = 3
			ELSE
				LOCAL = -3
			ENDIF
		;(天候パッチ)豪雨・ひょうを追加
		;豪雨
		CASE 天气_暴雨
			IF TALENT:ARG:水棲
				LOCAL = 3
			ELSE
				LOCAL = -6
			ENDIF
		;ひょう
		CASE 天气_冰雹
			LOCAL = -10
	ENDSELECT
	;(天候パッチ)風速の影響
	IF WIND_VELOCITY == 天气_强风
		LOCAL -= 1
	ELSEIF WIND_VELOCITY == 天气_暴风
		LOCAL -= 3
	ELSEIF WIND_VELOCITY >= 天气_飓风
		LOCAL -= 6
	ENDIF
ENDIF

;吸血鬼と氷精はダメージ2倍,你も防衛できるので影響を大きく
SIF LOCAL < 0 && (TALENT:ARG:吸血鬼 || TALENT:ARG:氷精 || ARG == MASTER)
	TIMES LOCAL, 2.0
RETURNF LOCAL

