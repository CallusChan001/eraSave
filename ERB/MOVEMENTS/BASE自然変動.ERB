@BASE自然変動(ARG)
#LOCALSIZE 1
#LOCALSSIZE 1
#DIM 体力回復量
#DIM 気力回復量
#DIM 欲求不満
#DIM 傘ダメージ
#DIM Lapse
#DIMS 低気圧位置
低気圧位置 = %GET_LOCATION_LOW()%
Lapse = TIME_PROGRESS(TIME:時間進行管理)

;MASTERと同じ場所にいないとき    当不在MASTER同一位置时
IF CFLAG:ARG:現在位置 != CFLAG:MASTER:現在位置
	BASE:ARG:情緒 = BASE:ARG:情緒 - Lapse * 4 * (BASE:ARG:情緒 + 500) / 500
	BASE:ARG:情緒 = MAX(0,BASE:ARG:情緒)
	BASE:ARG:理性 = BASE:ARG:理性 + Lapse * (MAXBASE:ARG:理性 + 500) / (BASE:ARG:理性 + 500)
ELSE
	;仙香玉兎による補正　情緒↑理性↓憤怒↓    仙香玉兔补正
	IF IsInsenceValid(ARG)
		BASE:ARG:情緒 += Lapse * (SQRT(TFLAG:仙香玉兎) / 2)
		BASE:ARG:情緒 = MIN(BASE:ARG:情緒 , MAXBASE:ARG:情緒)
		BASE:ARG:理性 -= Lapse * (SQRT(TFLAG:仙香玉兎) / 2)
		BASE:ARG:憤怒 -= Lapse * SQRT(TFLAG:仙香玉兎) / (CFLAG:ARG:ブチギレ + 1)
	ENDIF
	;劇毒身軀の媚毒付与による補正　理性↓ 発情付与・無差別だがそれなり注ぐ必要あり    剧毒身躯补正
	;計算式が複雑すぎる
	IF TCVAR:ARG:ポイズンゲージ
		BASE:ARG:理性 -= Lapse * (MAX(SQRT(TCVAR:ARG:ポイズンゲージ) / 2, 1))
		IF BASE:ARG:理性 <= 0 && PALAM:ARG:欲情 >= PALAMLV:7 && TCVAR:ARG:発情 == 0 && !TALENT:ARG:妊娠 && !TALENT:ARG:初潮 && TALENT:ARG:幼稚
			;1000ほどゲージを稼ぐと3割程度で発情付与　欲求不満度が上がるほど確率向上    积累到1000左右的刻度后，有30%左右的概率会触发发情，欲望不满度越高，概率越高
			IF RAND:(TCVAR:ARG:ポイズンゲージ + SQRT(TCVAR:ARG:ポイズンゲージ * CFLAG:ARG:积攒度 / 2)) > SQRT(TCVAR:ARG:ポイズンゲージ) * 20
				TCVAR:ARG:発情 = 1
				IF Lapse && !CFLAG:ARG:睡眠
					SETCOLOR C_RED
					PRINTFORML %CALLNAME:ARG%的理性随着\@ TCVAR:ARG:ポイズンゲージ > 1000? 完全# \@ 渗透全身的媚毒，被药性完全溶解……
					PRINTFORML 被媚毒完全浸润的子宫先于幼小的身体做好了准备…%CALLNAME:ARG%迎来了初潮……
					PRINTFORMW %CALLNAME:MASTER%安抚着看到下体一片鲜红而有些害怕的%CALLNAME:ARG%…%CALLNAME:ARG%的身体变得可以怀孕了…
					RESETCOLOR
					TALENT:ARG:初潮 = 1
				ENDIF
			ENDIF
		ELSEIF BASE:ARG:理性 <= 0 && PALAM:ARG:欲情 >= PALAMLV:7 && TCVAR:ARG:発情 == 0 && !TALENT:ARG:妊娠
			;1000ほどゲージを稼ぐと3割程度で発情付与　欲求不満度が上がるほど確率向上    积累到1000左右的刻度后，有30%左右的概率会触发发情，欲望不满度越高，概率越高
			IF RAND:(TCVAR:ARG:ポイズンゲージ + SQRT(TCVAR:ARG:ポイズンゲージ * CFLAG:ARG:积攒度 / 2)) > SQRT(TCVAR:ARG:ポイズンゲージ) * 20
				TCVAR:ARG:発情 = 1
				IF Lapse && !CFLAG:ARG:睡眠
					SETCOLOR C_PINK
					PRINTFORML %CALLNAME:ARG%的理性随着\@ TCVAR:ARG:ポイズンゲージ > 1000? 完全# \@ 渗透全身的媚毒，被药性完全溶解……
					PRINTFORML 浸润媚毒的卵巢开心的排出一枚娇嫩的卵子❤%CALLNAME:ARG%感受着小腹深处莫名的颤抖…一阵幸福感油然而生……
					PRINTFORMW 在%CALLNAME:ARG%享受奇妙感觉的时候，身体已然悄悄做好了受孕的准备……
					RESETCOLOR
					TCVAR:強制排卵 = 180
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
;毒气花园　理性↓积攒度↑ 発情付与 薬毒耐性・非生物には効かない    毒气花园 使发情 药毒耐性·对非生物无效
IF IsGardenValid(ARG)
	BASE:ARG:理性 -= Lapse * MAX(RAND:(ABL:ARG:欲望 + 1), 4)
	欲求不満 = 欲求不満素質補正(ARG, (2 * Lapse))
	;自宅Mapでないと上昇量が半減    非据点地图上升量减半（家地图）
	SIF !IN_HOME(TFLAG:GG設置位置)
		欲求不満 /= 2
	CFLAG:ARG:积攒度 = LIMIT(CFLAG:ARG:积攒度 + 欲求不満, 0, 1000)
	SIF BASE:ARG:理性 <= 0 && CFLAG:ARG:积攒度 >= 1000 && PALAM:ARG:欲情 >= PALAMLV:5 && !TALENT:ARG:妊娠
		TCVAR:ARG:発情 = 1
ENDIF
BASE:ARG:理性 = LIMIT(BASE:ARG:理性, 0, MAXBASE:ARG:理性)

;仕事中の場合、工作量が減少する    工作中工作量减少
IF CFLAG:ARG:行動 == 5
	BASE:ARG:工作量 = MAX(BASE:ARG:工作量 - Lapse * 10, 0)
	;宴会で呑んでる場合酒気が上昇    宴会上喝酒时酒劲上升
	SIF CFLAG:ARG:職種 == 49 && !(TALENT:ARG:酒耐性 == -2 || CFLAG:ARG:妊娠自覚状態 == 1)
		BASE:ARG:酒気 += Lapse * (RAND:3 * (4 - TALENT:ARG:酒耐性))
ENDIF
;憤怒は常に減少する    愤怒总是减少
BASE:ARG:憤怒 = BASE:ARG:憤怒 - Lapse * 5 / (CFLAG:ARG:ブチギレ + 1)
;合意誤認
SIF TALENT:ARG:合意誤認
	BASE:ARG:憤怒 -= Lapse * 10 / (CFLAG:ARG:ブチギレ + 1)
;宴会の席ならさらに減少する    宴会进一步减少愤怒
SIF CFLAG:ARG:職種 == 49 && CFLAG:ARG:ブチギレ > 0
	BASE:ARG:憤怒 -= Lapse * 5 / (CFLAG:ARG:ブチギレ + 1)
SIF BASE:ARG:憤怒 <= 0
	CFLAG:ARG:ブチギレ = 0
BASE:ARG:憤怒 = MAX(0,BASE:ARG:憤怒)
;酒気は常に減少する    酒气一直减少
BASE:ARG:酒気 = BASE:ARG:酒気 - Lapse
;烂醉時は減少量が増える    醉酒时减少量增加
SIF TCVAR:ARG:烂醉
	BASE:ARG:酒気 -= Lapse * (RAND:4)
BASE:ARG:酒気 = MAX(0,BASE:ARG:酒気)
;睡眠深度の変動    睡眠深度变化
IF CFLAG:ARG:睡眠
	;寝てる場合    睡眠
	TCVAR:ARG:睡眠深度 += Lapse * 10 * MAX(TCVAR:ARG:睡眠薬強度, 1)
	TCVAR:ARG:睡眠深度 += (BASE:ARG:酒気 / 5 + TCVAR:ARG:疲労度 / 3)
	TCVAR:ARG:疲労度    = TCVAR:ARG:疲労度 * 2 / 3
	SIF TCVAR:ARG:疲労度 < 100
		TCVAR:ARG:疲労度 = 0
ELSE
	;寝てない    非睡
	IF TCVAR:ARG:睡眠深度 > 0
		TCVAR:ARG:睡眠深度 -= Lapse * 10
	ELSE
		TCVAR:ARG:睡眠深度 = 0
	ENDIF
ENDIF


;心情不快
SIF CFLAG:ARG:心情不快
	BASE:ARG:憤怒 = MAXBASE:ARG:憤怒
SIF FLAG:不会生气
	BASE:ARG:憤怒 = 0

;勃起度の自然増減
IF CFLAG:ARG:诶嘿嘿
	IF BASE:ARG:勃起 <= 900 && (BASE:ARG:精力 >= 500 || TCVAR:ARG:国士無双の薬)
		BASE:ARG:勃起 += Lapse * 2
		SIF BASE:ARG:精力 >= 1000 || TCVAR:ARG:国士無双の薬
			BASE:ARG:勃起 += Lapse * 5
	ENDIF
ELSE
	SIF CFLAG:ARG:勃起度２ <= CFLAG:ARG:勃起度 && !TCVAR:ARG:要去了
		BASE:ARG:勃起 = MAX(0,BASE:ARG:勃起 - Lapse * 20)
ENDIF
IF ARG == MASTER
	IF BASE:ARG:勃起 <= 900 && (BASE:ARG:精力 >= 500 || TCVAR:ARG:国士無双の薬)
		FOR LOCAL, 1, GET_TARGETNUM() + 1
			SIF !CFLAG:(TARGET:LOCAL):诶嘿嘿
				CONTINUE
			;リアリティはともかくとしてとりあえず    暂且不谈现实……
			BASE:MASTER:勃起 += GET_TARGETNUM() * 5
			BREAK
		NEXT
		SIF TARGET
			BASE:MASTER:勃起 += MIN(10, 1 + ABL:TARGET:欲望 / 5) * Lapse
	ENDIF
	;仕様が正しいのかわからないが睡眠姦BONUS    不知规格是否正确，但睡眠奸BONUS
	SIF CFLAG:MASTER:恶作剧 == 2 || FLAG:70
		BASE:MASTER:勃起 += 5
ENDIF
BASE:ARG:勃起 = MIN(BASE:ARG:勃起, MAXBASE:ARG:勃起)

;媚薬フラグ
TCVAR:ARG:媚薬 = MAX(TCVAR:ARG:媚薬 - Lapse,0)
;利尿剤
TCVAR:ARG:利尿剤 = MAX(TCVAR:ARG:利尿剤 - Lapse,0)
;催情薬フラグ
TCVAR:ARG:催情薬 = MAX(TCVAR:ARG:催情薬 - Lapse,0)
;新鲜精液
TCVAR:ARG:新鲜精液 = MAX(TCVAR:ARG:新鲜精液 - Lapse,0)
;排卵誘発剤
TCVAR:ARG:強制排卵 = MAX(TCVAR:ARG:強制排卵 - Lapse,0)
;仙香玉兎,劇毒身軀
IF ARG == MASTER
	TFLAG:仙香玉兎 = MAX(TFLAG:仙香玉兎 - Lapse,0)
	TFLAG:劇毒身軀 = MAX(TFLAG:劇毒身軀 - Lapse, 0)
ENDIF
;ポイズンゲージ    毒药计量表
TCVAR:ARG:ポイズンゲージ = MAX(TCVAR:ARG:ポイズンゲージ - (Lapse * MAX(TCVAR:ARG:ポイズンゲージ / 100, 1)), 0)

欲求不満 = 0
IF (TCVAR:ARG:媚薬 || TCVAR:ARG:発情 || IsInsenceValid(ARG)) && ARG != MASTER
	欲求不満 = 欲求不満素質補正(ARG,Lapse)
	CFLAG:ARG:积攒度 = LIMIT(CFLAG:ARG:积攒度 + 欲求不満, 0, 1000)
ENDIF
;延迟減算処理
CFLAG:ARG:延迟 = MAX(CFLAG:ARG:延迟 - Lapse,0)
SIF !CFLAG:ARG:延迟
	TCVAR:ARG:TIME_CLOTHING_SET = 0
;汚れを付ける
TCVAR:ARG:肮脏度 = 0
IF AT_HOME(ARG) || CFLAG:ARG:現在位置 == OMANEKIBEYA()
	IF !(ROOMDATA:(CFLAG:ARG:現在位置 % 100) & 場所_无尘)
		TCVAR:ARG:肮脏度 = CFLAG:ARG:睡眠 ? 0 # 3 - ABL:ARG:清掃技能 / (1 + TALENT:ARG:懒散)
		SIF TALENT:ARG:幼稚
			TCVAR:ARG:肮脏度 += 2
		SIF CFLAG:ARG:初期位置 == CFLAG:ARG:現在位置 && TALENT:ARG:懒散
			TCVAR:ARG:肮脏度 += 3
		SIF CFLAG:ARG:大掃除 > 0
			TCVAR:ARG:肮脏度 = CFLAG:ARG:睡眠 ? 0 # 1 + TALENT:ARG:幼稚 - 3 * (ABL:ARG:清掃技能 + 1)
		;掃除をしてる場合、汚れが減少    打扫卫生时，污垢会减少
		IF CFLAG:ARG:職種 == 40 && CFLAG:ARG:行動 == 5
			TCVAR:ARG:肮脏度 = -2 * (ABL:ARG:清掃技能 * 20 + 100)
		;掃除係は12～18時の間掃除,你の技能が高いと掃除させてもらえない    打扫时间在12点至18点之间，你技能太高就不让我帮你打扫了
		ELSEIF TALENT:ARG:掃除係 && CFLAG:ARG:神社在住 && BETWEENTIME(720,1080)
			TCVAR:ARG:肮脏度 = -1 * MAX(ABL:ARG:清掃技能 + 2 - ABL:MASTER:清掃技能, 1)
		ENDIF
		YOGORE:(CFLAG:ARG:現在位置) += TCVAR:ARG:肮脏度 * Lapse / 5
		YOGORE:(CFLAG:ARG:現在位置) = LIMIT(YOGORE:(CFLAG:ARG:現在位置), 0, 6000)
	ELSE
		YOGORE:(CFLAG:ARG:現在位置) = 0
	ENDIF
ENDIF
IF !CFLAG:ARG:诶嘿嘿 && CFLAG:ARG:行動 != 5 && Lapse >= 10 && ARG
	体力回復量 = (10 + TALENT:ARG:回復速度) * Lapse / 20
	気力回復量 = (10 + TALENT:ARG:回復速度) * Lapse / 20
	;回復量が100未満の場合は非表示    回复量不足100时不表示
	CALL RECOVER(ARG,体力回復量,"体力", 体力回復量 < 100 ? "" # "经过休息得到恢复" )
	CALL RECOVER(ARG,気力回復量,"気力", 気力回復量 < 100 ? "" # "经过休息得到恢复" )
ENDIF
;衰弱の処理
IF CFLAG:ARG:衰弱
	体力回復量 = (3 + TALENT:ARG:回復速度) * MAXBASE:ARG:体力/2000
	気力回復量 = (3 + TALENT:ARG:回復速度) * MAXBASE:ARG:気力/2000
	;添い寝状態だと相手の回復量が上昇    若处于陪睡状态，则对方的恢复量会增加
	IF CFLAG:ARG:陪睡中
		体力回復量 *= 2
		気力回復量 *= 2
	ENDIF
	CALL RECOVER(ARG,Lapse * 体力回復量,"体力")
	CALL RECOVER(ARG,Lapse * 気力回復量,"気力")
	CFLAG:ARG:衰弱 = MAX(CFLAG:ARG:衰弱 - Lapse,0)
	IF BASE:ARG:体力 > MAXBASE:ARG:体力 / 2
		CFLAG:ARG:衰弱 = 0
		TCVAR:ARG:休憩中 = 0
	ENDIF
ENDIF
;雨、雪が降っている場合、屋根がないなら体力がちょっとずつ減る    下雨或下雪时，若无屋顶则体力会逐渐下降
;神社外にいるキャラは減らないがあなたとデート中の相手は減る    虽然家地图外面的角色没减少，但遇见的却减少了
;雨で衰弱状態にはならない    不会因下雨而身体衰弱
IF ARG == MASTER && ITEM:折り畳み傘 && GETBIT(nUmbrellaMods, Umbrella_Regen) && FLAG:傘耐久度 > 0 ;addition custom code
	FLAG:傘耐久度 -= (RAND(1, 5) + RAND(1, 5)) * Lapse / 2
	FLAG:傘耐久度 = MAX(FLAG:傘耐久度, 0)
ENDIF
IF !IS_NO_RAIN(AT_AREA(ARG)) && OUTROOF(CFLAG:ARG:現在位置) && (AT_HOME(ARG) || ARG == MASTER || FLAG:约会的对象 == ARG)
	IF WEATHERDLC
		CALL WEATHERCHECK(TARGET, ARG, Lapse)
	ENDIF
	;あなたが折りたたみ傘を持っていない場合
	IF ARG == MASTER && !(EQUIP:ARG:アクセサリ == 6 || TEQUIP:ARG:相合い傘 || ITEM:折り畳み傘) ;addition custom code
		SELECTCASE TIME:天気
			;雨・霧雨
			CASE 天气_雨, 天气_雾雨
				;余計なタイミングでメッセージが出ないように    以免在不合时宜的时候发出信息
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 被雨淋的皮肤发寒
			;大雨
			CASE 天气_大雨
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 冰冷的雨刺激着皮肤
			;雪・細雪・霧雪・雨雪交加
			CASE 天气_雪, 天气_细雪, 天气_雾雪, 天气_雨夹雪
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 被雪弄得皮肤发寒
			;大雪
			CASE 天气_大雪
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 大雪冻得身体发冷
			;(天候パッチ)豪雨・ひょうを追加、あられを変更
			;あられ
			CASE 天气_冰霰
				IF GET_HEAT_THUNDERSTORM() == 1
					SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
						PRINTW 被冰雹砸得生疼
				ELSE
					SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
						PRINTW 被雪弄得皮肤发寒
				ENDIF
			;豪雨
			CASE 天气_暴雨
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 瀑布般的雨打在身上
			;ひょう
			CASE 天气_冰雹
				SIF Lapse && !TFLAG:195 && !CFLAG:ARG:诶嘿嘿 && !CFLAG:ARG:睡眠
					PRINTW 大颗的冰雹摧残着身体
		ENDSELECT
	;你が折りたたみ傘を持っていると体力の代わりに傘耐久度が減る    如果你拿着折叠伞，体力会减少，同时伞的耐久度也会降低
	ELSEIF ARG == MASTER
		SELECTCASE TIME:天気
			;霧雨、霧雪
			CASE 天气_雾雨, 天气_雾雪
				傘ダメージ = 1
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 20
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 50
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 100
				ENDIF
			;あられ
			CASE 天气_冰霰
				傘ダメージ = 5
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 50
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 200
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 400
				ENDIF
			;雨・雪・細雪・雨雪交加
			CASE 天气_雨, 天气_雪, 天气_细雪, 天气_雨夹雪
				傘ダメージ = 2
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 30
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 100
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 200
				ENDIF
			;大雨・大雪
			CASE 天气_大雨, 天气_大雪
				傘ダメージ = 20
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 50
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 200
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 400
				ENDIF
			;(天候パッチ)豪雨・ひょうを追加
			;豪雨
			CASE 天气_暴雨
				傘ダメージ = 50
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 50
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 150
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 300
				ENDIF
			;ひょう
			CASE 天气_冰雹
				傘ダメージ = 100
				;(天候パッチ)風速の影響
				IF WIND_VELOCITY == 天气_强风
					傘ダメージ += 50
				ELSEIF WIND_VELOCITY == 天气_暴风
					傘ダメージ += 200
				ELSEIF WIND_VELOCITY >= 天气_飓风
					傘ダメージ += 400
				ENDIF
			CASEELSE
				傘ダメージ = 0
		ENDSELECT
			IF GETBIT(nUmbrellaMods, Umbrella_Resistance) ;addition custom code
				SIF 傘ダメージ > 100 ;straight up divide by 2 if higher than 100 damage at once
					傘ダメージ /= 2
				傘ダメージ = MULTIPLY(傘ダメージ, 75) ;shave off 25%
			ENDIF

		FLAG:傘耐久度 += 傘ダメージ * Lapse
		IF FLAG:傘耐久度 > Add_UmbrellaMaxHealth()
			IF MONEY >= 1200 && Automatic_umbrella_repair == 1;1==花钱自动维修
				FLAG:傘耐久度 = 0
				MONEY -= 1200
				CALL COLORMESSAGE(@"伞坏了！%CALLNAME:MASTER%花费1200¥从间隙商店重新购买一把新的。",C_YELLOW,2)
