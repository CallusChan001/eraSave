@EXIST_FreeAct10
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct10(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行動指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起钓鱼")
CASE "CHAIN"
;他角色に連鎖しない場合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;0だと30分か残り時間全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行動内容_10(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;釣魚Lv1以上の角色が釣魚できる場所にいる時
		SIF TALENT:CHARA:釣魚Lv < 1
			RETURN 0
		SIF !FISHING_SPOT(現在地)
			RETURN 0
		SIF BASE:CHARA:気力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%\@ CHAIN ? 开始跟着%CALLNAME:CHAIN%一起釣魚了。# 拿出了钓鱼竿开始钓鱼。\@
		RETURN 60 + RAND:120
	CASE "行動中"
			IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				IF メッセージ表示
					SELECTCASE RAND:4
					CASE 1
					PRINTFORMW %CALLNAME:CHARA%钓上了一条鱼…红彤彤的脸上充满兴奋的神色…
					CASEELSE
					PRINTFORMW %CALLNAME:CHARA%在悠哉由哉地钓着鱼…脸微微发红
					ENDSELECT
				ENDIF
			ELSE
				IF メッセージ表示
					SELECTCASE RAND:4
					CASE 1
					PRINTFORMW %CALLNAME:CHARA%钓上了一条鱼。
					CASEELSE
					PRINTFORMW %CALLNAME:CHARA%在悠哉由哉地钓着鱼。
					ENDSELECT
				ENDIF
			ENDIF
	CASE "完了"
		;完了までいったら経験+2
		EXP:CHARA:釣魚経験 += 2
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%钓完鱼后吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%似乎钓完鱼了。
		ENDIF	
	CASE "中断"
		EXP:CHARA:釣魚経験 += 1
	CASE "付き合う"
		;同行时自由行动的触发文本
		IF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在认真钓鱼…
				PRINTFORML 捂着小腹忍耐着❤真可爱…
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML %CALLNAME:CHARA%夹杂着甜美气息的脸涨得通红…注意力似乎没有钓鱼上…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML %CALLNAME:CHARA%在钓鱼中似乎夹杂着甜美的气息…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 钓鱼中的%CALLNAME:CHARA%脸红红的…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %CALLNAME:PLAYER%看着钓鱼中的%CALLNAME:CHARA%…
			ELSE 
				PRINTFORML %CALLNAME:PLAYER%在钓鱼中的%CALLNAME:CHARA%旁边发着呆…
			ENDIF	
		ELSE
			PRINTFORML %CALLNAME:PLAYER%在%CALLNAME:CHARA%的旁边一起钓着鱼
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息拿着鱼竿、
				PRINTFORML 捂着小腹忍耐着的样子❤真可爱…
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 虽然%CALLNAME:CHARA%努力装出钓鱼的样子…但其实根本没在认真钓鱼…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 观察着脸红的%CALLNAME:CHARA%……偶尔发出甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 观察着脸红的%CALLNAME:CHARA%……眼神有些飘忽…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 观察着脸红的%CALLNAME:CHARA%…
			ELSE
			ENDIF	
			PRINTFORML %TEXTR(@"%CALLNAME:CHARA%似乎钓上了什么东西…/虽然没钓上什么、两人度过了悠闲自在的一段时间…/钓到了小鱼、往%CALLNAME:CHARA%的钓鱼桶里放进去了…")%
		ENDIF
	CASE "ソース"
		;交手指令選択時の入手ソース、時間係数は付き合った時間の1/10
		IF !ITEM:釣魚竿
			;釣魚竿がないと見てるだけ
			TFLAG:193 = -1
			DOWNBASE:MASTER:気力 += 50 * 時間係数
			DOWNBASE:CHARA:体力 += 10 * 時間係数
			DOWNBASE:CHARA:気力 += 20 * 時間係数
			SOURCE:CHARA:歓楽 = (50 + ((ABL:CHARA:親密 + TALENT:MASTER:釣魚Lv) * 25)) * 時間係数
		ELSE
			DOWNBASE:MASTER:体力 += 20 * 時間係数
			DOWNBASE:MASTER:気力 += 40 * 時間係数
			DOWNBASE:CHARA:体力 += 10 * 時間係数
			DOWNBASE:CHARA:気力 += 20 * 時間係数
			SOURCE:CHARA:歓楽 = (150 + ((ABL:CHARA:親密 + TALENT:MASTER:釣魚Lv) * 50)) * 時間係数
			SOURCE:CHARA:受動 = (100 + ((ABL:CHARA:従順 + TALENT:MASTER:釣魚Lv) * 50)) * 時間係数
			TFLAG:98 = 1
			EXP:MASTER:釣魚経験 ++
		ENDIF
ENDSELECT