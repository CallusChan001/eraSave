@EXIST_FreeAct12
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct12(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行動指令の名称
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起放松")
CASE "CHAIN"
;他角色に連鎖しない場合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;0だと30分か残り時間全部の小さい方
	CALLF MAKE_INT(V_NAME, 0)
ENDSELECT

@自由行動内容_12(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;昼間に休憩できる場所または憩いスペースにいる時
		SIF !INRANGE(TIME, 600, 960)
			RETURN 0
		SIF !休憩可(現在地) && !憩いスペース(現在地)
			RETURN 0
		;炬燵が発生するならそっちを優先する
		SIF 炬燵発生可(CHARA, 現在地)
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%\@ CHAIN ? 被%CALLNAME:CHAIN%吸引也跟着一起放松了。# 缓了口气在一边休息起来。\@
		RETURN 60 + RAND:30
	CASE "行動中"
		IF メッセージ表示
			IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORMW %CALLNAME:CHARA%脸红红的%TEXTR("正在打哈欠/正在放松/正在发呆/正在悠闲自在地放松")%。
			ELSE
				PRINTFORMW %CALLNAME:CHARA%%TEXTR("正在打哈欠/正在放松/正在发呆/正在悠闲自在地放松")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%休息完后吐出甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%似乎休息完了。
		ENDIF	
		
	CASE "中断"
	CASE "付き合う"
		;同行时自由行动的触发文本
		IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息坐在一旁、
				PRINTFORML 看来确实需要好好休息呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 身边是夹杂着甜美娇喘的%CALLNAME:CHARA%…兴奋起来了…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML %CALLNAME:PLAYER%陪着%CALLNAME:CHARA%、时不时传来甜美的气息…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %CALLNAME:PLAYER%和脸通红的%CALLNAME:CHARA%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML %CALLNAME:PLAYER%和红着脸的%CALLNAME:CHARA%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ELSE
				PRINTFORML %CALLNAME:PLAYER%和%CALLNAME:CHARA%一起%TEXTR("发着呆、/懒懒散散地/悠闲自在地")%度过了一段时间…
			ENDIF		
	CASE "ソース"
		;交手指令選択時の入手ソース、時間係数は付き合った時間の1/10
		CALL RECOVER_PERMIL(MASTER, 30, "体力", 1)
		CALL RECOVER_PERMIL(MASTER, 80, "気力", 1)
		CALL RECOVER_PERMIL(CHARA, 50, "体力", 1)
		CALL RECOVER_PERMIL(CHARA, 100, "気力", 1)
		SOURCE:CHARA:歓楽 = (100 + ((ABL:CHARA:親密 + 好感度係数(CHARA)) * 10)) * 時間係数
		SOURCE:CHARA:受動 = (50 + ((ABL:CHARA:従順 + 好感度係数(CHARA)) * 5)) * 時間係数
ENDSELECT