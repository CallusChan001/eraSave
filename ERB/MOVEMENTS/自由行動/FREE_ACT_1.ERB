;玩遊戲
@EXIST_FreeAct1
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct1(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間

SELECTCASE O_DATA
CASE "名称"
	CALLF MAKE_STR(V_NAME, "一起玩")
CASE "CHAIN"
;他角色に連鎖する場合コメントアウト外すこと
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;未入力だと最大30分
;	CALLF MAKE_INT(V_NAME, 経過時間)
ENDSELECT

@自由行動内容_1(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"
		;［幼稚］持ちが屋外にいる時
		SIF !TALENT:CHARA:幼稚
			RETURN 0
		SIF !OUTROOF(現在地) && !戦闘訓練可(現在地)
			RETURN 0
		SIF BASE:CHARA:気力 <= 500
			RETURN 0
		SIF メッセージ表示
			PRINTFORMW %CALLNAME:CHARA%开始\@ CHAIN ? 和%CALLNAME:CHAIN%一起游玩起来了。 # 在%NAME_FROM_PLACE(現在地)%游玩起来了。\@
		RETURN 60 + RAND:60
	CASE "行動中"
		IF メッセージ表示
			IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORMW %CALLNAME:CHARA%脸红红的%TEXTR(@"跑来跑去/在嬉戏/玩耍中/准备捉弄一下%CALLNAME:MASTER%")%。
			ELSE
				PRINTFORMW %CALLNAME:CHARA%%TEXTR(@"跑来跑去的/在嬉戏/在神采奕奕地玩耍中/似乎想要捉弄一下%CALLNAME:MASTER%")%。
			ENDIF	
		ENDIF
	CASE "完了"
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%玩累了吐着甜美的喘息。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%似乎玩累了。
		ENDIF		
	CASE "中断"
		;中断メッセージは诶嘿嘿突入時等でも表示されてしまうので表示しない
	CASE "付き合う"
		PRINTFORML %CALLNAME:PLAYER%加入了%CALLNAME:CHARA%的游戏
		IF TFLAG:193 > 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息参加着游戏、
				PRINTFORML 捂着小腹的动作❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 游玩时总不自觉看向%CALLNAME:PLAYER%、今天游玩的气氛格外热烈…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 游玩时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 动作似乎有些迟钝、红着脸说今天身体有些不适…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 游玩时情绪格外热烈…
			ELSE
				PRINTFORML 游玩的气氛变得热烈了起来…
			ENDIF		
		ELSEIF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…游戏进行不下去了…
				PRINTFORML 虽然捂着小腹的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 导致游戏只能断断续续的、拼命找理由的脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸努力参与着游戏…但还是冷场了…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 游戏时绷紧了身子、找理由敷衍着导致有点冷场了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 随意敷衍着游戏…似乎有点冷场了…
			ELSE
				PRINTFORML 似乎有点冷场了…
			ENDIF
		ENDIF
	CASE "ソース"
		DOWNBASE:MASTER:体力 += 40 * 時間係数
		DOWNBASE:MASTER:気力 += 40 * 時間係数
		DOWNBASE:CHARA:体力 += 20 * 時間係数
		DOWNBASE:CHARA:気力 += 20 * 時間係数
		SELECTCASE RAND:10
		CASE 1
			;10%で大成功
			TFLAG:193 = 1
			SOURCE:CHARA:歓楽 = (200 + ((ABL:CHARA:親密 + 好感度係数(CHARA)) * 80)) * 時間係数
			SOURCE:CHARA:受動 = (120 + ((ABL:CHARA:従順 + 好感度係数(CHARA)) * 80)) * 時間係数
			SOURCE:CHARA:征服 = (120 + (ABL:CHARA:施虐属性 * 120)) * 時間係数
			TFLAG:98 = 2
		CASE 2
			;10%で失敗
			TFLAG:193 = -1
			SOURCE:CHARA:歓楽 = (100 + ((ABL:CHARA:親密 + 好感度係数(CHARA)) * 30)) * 時間係数
			SOURCE:CHARA:受動 = (50 + ((ABL:CHARA:従順 + 好感度係数(CHARA)) * 20)) * 時間係数
			SOURCE:CHARA:征服 = (50 + (ABL:CHARA:施虐属性 * 50)) * 時間係数
		CASEELSE
			SOURCE:CHARA:歓楽 = (150 + ((ABL:CHARA:親密 + 好感度係数(CHARA)) * 50)) * 時間係数
			SOURCE:CHARA:受動 = (100 + ((ABL:CHARA:従順 + 好感度係数(CHARA)) * 50)) * 時間係数
			SOURCE:CHARA:征服 = (100 + (ABL:CHARA:施虐属性 * 100)) * 時間係数
			TFLAG:98 = 1
		ENDSELECT
ENDSELECT