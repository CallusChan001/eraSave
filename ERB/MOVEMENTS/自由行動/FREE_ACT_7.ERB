@EXIST_FreeAct7
#LOCALSIZE 1
#LOCALSSIZE 1

;オブジェクト本体
@FreeAct7(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
#DIM 経過時間
経過時間 = Activity_Duration:TARGET
SELECTCASE O_DATA
;陪同行動指令の名称
CASE "名称"
	IF Activity_Duration:ARG > 30
		CALLF MAKE_STR(V_NAME, "帮忙做饭")
	ELSE
		CALLF MAKE_STR(V_NAME, "求分点饭菜")
	ENDIF
CASE "CHAIN"
;他角色に連鎖しない場合コメントアウトすること
	CALLF MAKE_INT(V_NAME, 1)
CASE "経過時間"
;陪同行動指令での経過時間
;0だと30分か残り時間全部の小さい方
	IF Activity_Duration:TARGET > 30
		経過時間 = Activity_Duration:TARGET - 30
	ELSE
		経過時間 = 0
	ENDIF
	CALLF MAKE_INT(V_NAME, 経過時間)
ENDSELECT

@自由行動内容_7(CHARA, ARGS, 時間係数, CHAIN)
#DIM CHARA
#DIM CHAIN
#DIM 現在地
#DIM メッセージ表示
#DIM 時間係数
#DIM 経過時間
現在地 = CFLAG:CHARA:現在位置
メッセージ表示 = 現在地 == CFLAG:MASTER:現在位置 ? 1 # 0
SELECTCASE ARGS
	CASE "発生"	
		;料理技能1以上の角色が空腹状態で廚房にいる時
		SIF ABL:CHARA:料理技能 < 1
			RETURN 0
		SIF !KITCHEN(現在地)
			RETURN 0
		SIF TIME_PROGRESS(TCVAR:CHARA:空腹時刻) <= 0
			RETURN 0
		IF メッセージ表示
			IF CHAIN
				IF Activity_Duration:CHARA > 30
					PRINTFORMW %CALLNAME:CHARA%决定给%CALLNAME:CHAIN%帮忙了。
				ELSE
					PRINTFORMW %CALLNAME:CHARA%让%CALLNAME:CHAIN%给自己分了点吃的。
				ENDIF
			ELSE
				PRINTFORMW %CALLNAME:CHARA%觉得肚子饿了、开始做饭了。
			ENDIF
		ENDIF
		RETURN 60 + RAND:30
	CASE "行動中"
		;吃飯とセット
		
		IF Activity_Duration:CHARA > 30
			IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%满脸通红地做着饭。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%在轻快地做着饭。
			ENDIF	
		ELSE
			IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%满脸通红地吃着自己做好的饭菜。
			ELSE
				SIF メッセージ表示
					PRINTFORMW %CALLNAME:CHARA%在吃自己做好的饭菜。
			ENDIF
			CALL 自由行動吃飯(CHARA)
		ENDIF
	CASE "完了"
		;完了までしたら料理経験+2
		EXP:CHARA:料理経験 += 2
		IF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%吐着甜美的喘息吃完饭了。
		ELSE
			SIF メッセージ表示
				PRINTFORMW %CALLNAME:CHARA%似乎吃完饭了。
		ENDIF	
		CALL 自由行動吃飯(CHARA)
	CASE "中断"
		EXP:CHARA:料理経験 += 1
		SIF Activity_Duration:CHARA <= 30
			CALL 自由行動吃飯(CHARA)
	CASE "付き合う"
		;同行时自由行动的触发文本
		IF TFLAG:193 == 2
			PRINTFORML %CALLNAME:PLAYER%帮%CALLNAME:CHARA%一起做饭
			SELECTCASE ABL:CHARA:料理技能
			CASE IS <= 1
				PRINTFORML %CALLNAME:CHARA%的料理实在是无法置评…
			CASE 2, 3
				PRINTFORML %CALLNAME:CHARA%正再慢慢地一步步地做着饭菜…
			CASEELSE
				PRINTFORML %CALLNAME:CHARA%在手脚利落地做着饭菜…
			ENDSELECT
			PRINTFORML %CALLNAME:PLAYER%让%CALLNAME:CHARA%给自己分了些做好的饭菜
		ELSEIF TFLAG:193 < 0
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息…并没有在吃东西…
				PRINTFORML 捂着小腹忍耐的动作看起来❤很可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 吃东西断断续续的、拼命找着身体不适的理由、脸涨得通红…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 红着脸随意吃了两口…看来也没那么饿…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 说着身体不适并没没吃多少就停下了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 只随意吃了两口就停下了…
			ELSE 
				PRINTFORML 其实也没那么饿…
			ENDIF	
		ELSE
			IF 充填率(CHARA,1) >= 150 || 充填率(CHARA,2) >= 150
				PRINTFORML %CALLNAME:CHARA%捂着嘴忍耐着体内\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的爱抚…香汗淋漓…
				PRINTFORML 脸涨得通红并且夹杂着甜美喘息摇着头、
				PRINTFORML 看来暂时没有余力好好吃饭呢❤真可爱
			ELSEIF 充填率(CHARA,1) >= 100 || 充填率(CHARA,2) >= 100
				PRINTFORML %CALLNAME:CHARA%正享受着体内满满\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激轻轻娇喘……
				PRINTFORML 夹杂着甜美的娇喘的食物格外美味…
			ELSEIF 充填率(CHARA,1) >= 70 || 充填率(CHARA,2) >= 70
				PRINTFORML %CALLNAME:CHARA%正感受着体内大量\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子的刺激……
				PRINTFORML 断断续续的就餐、时不时夹杂着甜美的娇喘…
			ELSEIF 充填率(CHARA,1) >= 40 || 充填率(CHARA,2) >= 40
				PRINTFORML %CALLNAME:CHARA%正被体内许多\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸慢慢的吃完了…
			ELSEIF 充填率(CHARA,1) >= 10 || 充填率(CHARA,2) >= 10
				PRINTFORML %CALLNAME:CHARA%正被体内残存\@ TALENT:MASTER:濃厚精液? 浓厚的 # 的\@精子刺激着……
				PRINTFORML 红着脸度过了温馨舒闲的一段时间…
			ELSE
				PRINTFORML 肚子多少填满了…
			ENDIF		
		ENDIF

	CASE "ソース"
		IF Activity_Duration:CHARA > 30
			;交手指令選択時の入手ソース、時間係数は付き合った時間の1/10
			DOWNBASE:MASTER:体力 += 20 * 時間係数
			DOWNBASE:MASTER:気力 += 20 * 時間係数
			DOWNBASE:CHARA:体力 += 10 * 時間係数
			DOWNBASE:CHARA:気力 += 10 * 時間係数
			SOURCE:CHARA:歓楽 = (100 + ((ABL:CHARA:従順 + ABL:MASTER:料理技能) * 50)) * 時間係数
			TFLAG:98 = 1
			EXP:MASTER:料理経験 ++
			TFLAG:193 = 2
		ELSE
			CALL FreeActMeal(CHARA, 時間係数)
		ENDIF
ENDSELECT