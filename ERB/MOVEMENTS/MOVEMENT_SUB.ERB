;------------------------------------------
;仕事や宴会の開始／経過／終了やメッセージの表示を行う    工作或宴会的开始/进行/结束以及信息
;------------------------------------------
@仕事宴会処理(ARG)
#LOCALSIZE 1
#LOCALSSIZE 1
SIF FLAG:時間停止 || CFLAG:ARG:衰弱 || CFLAG:ARG:招待 || CFLAG:ARG:睡眠
	RETURN

IF TCVAR:ARG:烂醉
	;宴会で酔いつぶれた場合はメッセージのみ表示して返回    如果在宴会上喝醉了，就只显示消息返回
	IF CFLAG:ARG:職種 == 51 && CFLAG:ARG:現在位置 == TFLAG:宴会場 && CFLAG:MASTER:現在位置 == CFLAG:ARG:現在位置
		CALL 宴会描写(ARG)
	ENDIF
	RETURN
ENDIF

IF !CFLAG:ARG:诶嘿嘿 || WORKING(ARG) || (CFLAG:ARG:诶嘿嘿 == 2 && CFLAG:ARG:宴会参加 == 2)
	;宴会時間帯呼び出し    宴会时段召唤
	IF CFLAG:ARG:宴会参加 == 1 || CFLAG:ARG:宴会参加 == 2
		CALL ENKAI_WORK(ARG)

	;宴会会場に立ち寄ったり近づいた角色は一定確率で宴会に加わる    靠近或造访宴会会场的角色有一定概率加入宴会
	ELSEIF FLAG:参加人数 >= 2 && (CFLAG:ARG:現在位置 == TFLAG:宴会場 || CAN_MOVE(CFLAG:ARG:現在位置, TFLAG:宴会場) >= 2) && !CFLAG:ARG:诶嘿嘿
		IF CFLAG:ARG:宴会参加 == 0 && RAND:5 < 4 && 宴会開催中判定() && TIME_PROGRESS(TIME:1) && 仕事中チェック(ARG) == 0
			IF CFLAG:MASTER:現在位置 == TFLAG:宴会場
				IF FLAG:参加人数 >= 8
					PRINTFORMW 因为看上去很有趣、%CALLNAME:ARG%加入了宴会！
				ELSE
					PRINTFORMW 看到会场的%CALLNAME:ARG%、就这样参加了宴会！
				ENDIF
			ENDIF
			CFLAG:ARG:宴会参加 = 1
			CALL ENKAI_START(ARG)
		ENDIF
	ENDIF

	;约会的对象が宴会やその準備に加わった場合、约会は強制的に中止    若约会对象参与宴会或宴会筹备，则约会强制中止
	IF GROUPMATCH(CFLAG:ARG:職種, 48, 49, 50, 51) && CHK_DATENOW(CFLAG:ARG:约会中)
		PRINTFORMW 和%CALLNAME:ARG%的约会暂且终止了
		CFLAG:ARG:约会中 = MAIN_MAP
		FLAG:约会的对象 = 0
		TFLAG:约会前好感度 = 0
		CFLAG:ARG:同行 = 0
	ENDIF

	;宴会の片付け予定が入っている角色は手が空き次第片付け開始    负责宴会收拾工作的人员一有空就立即开始收拾
	IF CFLAG:ARG:片付け工作量
		IF CFLAG:ARG:行動 == 0 && FLAG:参加人数 == 0
			CALL ENKAI_KATAZUKE(ARG)
			CFLAG:ARG:片付け工作量 = 0
			CFLAG:ARG:片付け場所 = 0
		ENDIF
	ENDIF

	;仕事時間中、宴会参加中、宴会準備中ならばCHARA_JOBSTR(ARG)    若处于工作时间、参加宴会时、筹备宴会时，则为CHARA_JOBSTR(ARG)
	IF WORKING(ARG) || (GROUPMATCH(CFLAG:ARG:職種, 48, 49, 50) && BASE:ARG:工作量 > 0) || GROUPMATCH(CFLAG:ARG:職種, 51)
		CALL CHARA_JOBSTR(ARG)
	;工作結束していれば終了処理    工作結束していれば終了処理
	ELSEIF CFLAG:ARG:行動 == 5
		CALL CHARA_JOBEND(ARG)
	ENDIF
ENDIF


