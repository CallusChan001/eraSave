;------------------------------------------
;時間に合わせて角色を起こす／寝かす    根据时间安排角色起床/睡觉
;------------------------------------------
@起床就寝処理(ARG)
#LOCALSIZE 1
#LOCALSSIZE 1
SIF FLAG:時間停止 || CFLAG:ARG:衰弱 || TCVAR:ARG:烂醉
	RETURN
SIF CFLAG:ARG:诶嘿嘿 && CFLAG:ARG:积攒度 > 0
	RETURN
;睡眠時間帯の場合    在睡眠时间的情况下
IF 睡眠時間(ARG)
	;起きてたら寝かせる    如果醒了就哄去睡觉
	IF !CFLAG:ARG:睡眠
		;约会中なら午睡は無視する
		IF !(CHK_DATENOW(CFLAG:ARG:约会中) && !睡眠時間(ARG))
			;CHARA_SLEEP改良に伴い一旦凍結    因CHARA_SLEEP改进，暂时冻结
			;住宿人物的家にお泊まりした時は帰らないように97 + MAIN_MAP * 100に避難    若借宿于人家则不返回并到97+MAIN_MAP*100避难
			;IF CFLAG:ARG:現在位置 != 97 + MAIN_MAP * 100
			;	;约会中に就寝時間になったら強制的に中止して帰宅    如果约会时到了睡觉时间，就强制中止回家
			;	CALL 睡眠時约会中断(ARG)
			;ENDIF
			IF !CFLAG:ARG:招待 && !(CFLAG:ARG:神社在住 && CFLAG:ARG:現在位置 == CFLAG:ARG:初期位置)
				IF CFLAG:MASTER:現在位置 == CFLAG:ARG:現在位置 && !CFLAG:MASTER:睡眠
					IF CFLAG:ARG:诶嘿嘿 || CHK_DATENOW(CFLAG:ARG:约会中)
						PRINTFORMW %CALLNAME:ARG%再也无法抵抗困意、于是回到\@ CFLAG:ARG:神社在住 ? 自室 # 自宅 \@去了
					ELSEIF IN_HOME(CFLAG:ARG:現在位置)
						PRINTFORMW %CALLNAME:ARG%道别过后、就睡眼蒙眬地离开了
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
	;主人公が起床中ならメッセージ表示
	CALL CHARA_SLEEP, ARG, !CFLAG:MASTER:睡眠
;睡眠時間帯から外れている場合    若不在睡眠时间段内
ELSE
	;寝てたら起こす
	IF CFLAG:ARG:睡眠
		CALL CHARA_AWAKE, ARG
		;住宿人物が自分的家で起きた場合、参道的另一边に移動させる    若住宿人物在家地图异常，则将其移至最大房
		SIF CFLAG:ARG:神社在住 && CFLAG:ARG:現在位置 == 97 + MAIN_MAP * 100
			CFLAG:ARG:現在位置 = MAXROOM
	ENDIF
ENDIF

