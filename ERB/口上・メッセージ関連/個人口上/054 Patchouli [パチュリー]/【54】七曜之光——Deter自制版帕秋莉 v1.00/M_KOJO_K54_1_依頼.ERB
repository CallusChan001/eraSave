		SIF 1
			RESULT = 1
		RESULTS:0 = どのジョブがいいかな？
		RESULTS:1 = かっこいしナイト
		RESULTS:2 = シーフが便利だよ
		RESULTS:3 = 青魔道士最強！
		RESULT:1 = 2
		RESULT:2 = 1
	CASE 2
		;このお悩みは、夏の月に発生し、正解がランダムで変わります
		SIF DAY:2 == 2
			RESULT = 1
		RESULTS:0 = どの水着を買おうかな？
		RESULTS:1 = かわいいワンピース
		RESULTS:2 = クールなセパレート
		RESULTS:3 = 色っぽいビキニ
		RESULT:1 = RAND:3 + 1
	CASE 3
		;このお悩みは、無条件で発生し、1番と3番が正解になります（5 - 3 = 2番がハズレになります）
		SIF 1
			RESULT = 1
		RESULTS:0 = ワンちゃんの名前は何にしよう？
		RESULTS:1 = ボロンゴ
		RESULTS:2 = ゲレゲレ
		RESULTS:3 = プックル
		RESULT:1 = 5
	CASE 4
		;このお悩みは、無条件で発生し、どれを選んでも正解になります
		SIF 1
			RESULT = 1
		RESULTS:0 = 夕飯は何がいい？
		RESULTS:1 = 肉じゃが
		RESULTS:2 = コロッケ
		RESULTS:3 = 焼き魚
		RESULT:1 = 7
	ENDSELECT
[SKIPEND]

	SIF !RESULT
		RESTART
	RETURN 1
ENDSELECT

