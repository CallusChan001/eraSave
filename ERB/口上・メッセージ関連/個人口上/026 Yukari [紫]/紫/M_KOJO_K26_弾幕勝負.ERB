;==================================================
;弹幕胜负
;==================================================
;
@M_KOJO_MESSAGE_COM_K26_DANMAKU(ARGS, 对方残机, ARG:2)
#DIM 对方残机
;全体の流れ
;①【战斗前】→②骰子ロールとプレイヤー选择肢、ハンデをつけた场合は【ハンデ口上】→③对应スキルが发动した场合【スキル口上】→④被弹判定、角色が被弹したなら【被弹口上】→
;どちらかの残机が0になっていなければ②に返回→⑤【战斗后口上】

;--------------------------------------------------
;记入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:口上色
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;战斗前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数值が大きいほど你が不利になる　数值が负なら你が有利に
	;角色の能力に关わらずクッソ强くしたり弱くしたりできる
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;愤怒
		IF CFLAG:318 == 1
			PRINTFORMW 「美丽而残酷地从这片大地上消失吧！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「很不巧，我的弹幕比蜘蛛丝更细，比蜘蛛网更复杂哦」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「你能打破我的结界吗？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「稍微给你扎个针灸吧」
		ELSE
			PRINTFORMW 「不知天高地厚，你要知道蛮勇不是勇敢」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので无记入でよい
		PRINTFORMDL 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;战斗中TARGET被弹时口上
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;别に一律で「やられたー」だけでもいいよ
		SELECTCASE 对方残机
			;残り残机3が表示されるのは【洽览深识】持ちのみ
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「大意了吗…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「我的结界可不止一两个哦」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「哎呀？被打中了？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…有什么打到我了吗？」
				ELSE
					PRINTFORMW 「呀，衣服要破了」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「可恶！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「嗯，情况不太妙呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「看来你相当有本事呢，%CALLNAME:MASTER%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…休想逃过我的眼睛！」
				ELSE
					PRINTFORMW 「你能穿过弹幕的间隙到什么时候呢？」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…这样下去不妙呢」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「蓝和橙都去哪里了呢？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「这就是走投无路的狐狸，我」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「苦肉计，我会让你明白的」
				ELSE
					PRINTFORMW 「我会夸奖你把我逼到这个地步的」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「……」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「没听说过要走那条路啊…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「越过了人与妖的境界线了吗」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「哎呀？我输了吗」
				ELSE
					PRINTFORMW 「…什么颜色能提升胜运呢？」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【残忍酷薄】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【乾坤一掷】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF RAND:4 == 0
			PRINTFORMW 「梦想封印 瞬，好怀念啊。」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「大意了？再好好看着我啊……」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「这种时候不可麻痹大意」
		ELSE
			PRINTFORMW 「反击就是这样的」
		ENDIF
		
	ENDIF
	;-------------------------------------------------
	;战斗中
	;TARGETの【怪力乱神】发动时
	;ARGはTARGETの残机
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		IF RAND:4 == 0
			PRINTFORMW 「以柔克刚，是这样吗」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「很不巧，没用的」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「虽不中亦不远矣，那么就当做『没打中』吧」
		ELSE
			PRINTFORMW 「这种程度可不算打中哦」
		ENDIF
		
	ENDIF
	
	;-------------------------------------------------
	;战斗后
	;记入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORMDL 
		;残り残机4が表示されうるのは【洽览深识】持ちのみ
		;残机が1以上なら你の负け、0の场合は你の胜利
		SELECTCASE 对方残机
			CASE 4
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「升入天界的猴子，对被赋予的职位感到愤怒而反叛，结果被囚禁在山中」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「真遗憾，%CALLNAME:MASTER%的完全失败」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「射击、斩击、突刺、释放、杀害…无论哪种对我都没用」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「即使停止时间也覆水难收，您会往盆里倒水吗？」
				ELSE
					PRINTFORMW 「只偷偷告诉你哦，我的弱点是…什么都没有哦」
				ENDIF
			CASE 3
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「喜欢五马分尸？还是做成金枪鱼？」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「幻想乡会接受一切哦，那是那是相当残酷的故事」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「射击、斩击、突刺、释放、杀害…无论哪种对我都没用」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「很不巧，我可不是柔弱的人哦」
				ELSE
					PRINTFORMW 「比西洋蒲公英还轻松」
				ENDIF
			CASE 2
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「所以说，真是麻烦啊」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「好痛…真的很痛啊」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「怎么样？已经习惯了吗？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「虽说是势均力敌，但还是我更胜一筹呢」
				ELSE
					PRINTFORMW 「说不定能赢过蓝呢」
				ENDIF
			CASE 1
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「我讨厌死缠烂打的男人」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「你很有才能哦，%CALLNAME:MASTER%」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「真是强敌啊，%CALLNAME:MASTER%」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「怎么样？要不要一起解决异变？」
				ELSE
					PRINTFORMW 「只有一线之隔，但那差距比三途川还要宽广」
				ENDIF
			CASE 0
				;愤怒
				IF CFLAG:318 == 1
					PRINTFORMW 「…真是的，竟然把我逼到这种地步…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「能打败我，你相当有实力呢」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「这样说不定比灵梦还强呢」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「是不是和蓝和橙一起战斗会更好呢？」
				ELSE
					PRINTFORMW 「还会再和我战斗吗？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

