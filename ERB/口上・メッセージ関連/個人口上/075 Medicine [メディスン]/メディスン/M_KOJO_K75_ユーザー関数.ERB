;-----------------------------------------------------------
;毒システムの減算実行関数（梅蒂欣専用）
;ARG:0 ループ回数（接触が浓厚的ほど回数を増す、指令毎に指定）
;ARG:1 減少値、負の値を入れる
;-----------------------------------------------------------
@K75_POISON_MAIN(ARG:0, ARG:1)
#DIM ループ回数

ループ回数 = 0

$POISON_LOOP
;TSPを必ず削る
;CALL BUFF_BASE(MASTER, BASE_TSP, ARG:1, 0)

SELECTCASE RAND:3
	CASE 0
		CALL BUFF_BASE(MASTER, BASE_体力, ARG:1, 0)
	CASE 1
		CALL BUFF_BASE(MASTER, BASE_気力, ARG:1, 0)
	CASEELSE
		IF GETBIT(TALENT:MASTER:性別, 1)
			CALL BUFF_BASE(MASTER, BASE_精力, (ARG:1 / 2) , 0)
		ENDIF
ENDSELECT
ループ回数 ++
;周回数が指定された回数以下ならループ
SIF ループ回数 < ARG:0
	GOTO POISON_LOOP

;本日の毒回数に加算（ループ回数に関わらず１回のカウント）
TCVAR:75:360 ++
;時姦、睡姦それぞれの毒総カウントに加算
IF FLAG:70
	CFLAG:75:1301 ++
ELSEIF CFLAG:睡眠
	CFLAG:75:1302 ++
ELSE
	CFLAG:75:1303 ++
ENDIF

