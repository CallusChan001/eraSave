	CX0 += 4
SIF TCVAR:140
	CX0 += 4
CX1 = RAND:(CX0 + 1)
CX2 = RAND:(CX0 - CX1 + 1)
CX3 = RAND:(CX0 - CX1 - CX2 + 1)

DOWNBASE:PLAYER:体力 += (30 * CX0)
DOWNBASE:PLAYER:気力 += (40 * CX0)
DOWNBASE:体力 += (40 * CX0 + 5 * (CX1 + CX3))
