;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K30_DANMAKU(ARGS, 相手残機, ARG:2)
#DIM 相手残機
#DIMS TXT
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		CALL SET_KOJO_COLOR(30)
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	IF K30_CHECK_HEN_T()
		HANDICAP_FIXED = 1200
		HANDICAP_RAND = 1500
	ELSEIF TCVAR:30:364
		HANDICAP_FIXED = -99999
	ENDIF
	
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF K30_CHECK_HEN_T()
			PRINTFORML 「……今天的我脑子很乱」
			PRINTFORML 「稍微认真地和你对战吧」
			PRINTFORMDW 现在的映姬似乎不打算只是玩玩而已了……
		ELSEIF TCVAR:30:364
			CALL HPH_PRINT, @"「哈……HPHHPH」", "L"
			CALL HPH_PRINT, @"「光、只是飞着…就用尽、全力了…HPH」", "L"
			PRINTFORMDW 现在的映姬弱爆了！
		ELSE
			SELECTCASE RAND:3
				CASE 0
					PRINTFORMW 「你的罪孽有多重，让我来衡量一下吧」
				CASE 1
					PRINTFORMW 「我的教诲，你有没有好好遵守呢？」
				CASE 2
					PRINTFORMW 「我对弹幕『对战』可是很有自信的哦」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		IF K30_CHECK_HEN_T()
			PRINTDATADL
				DATAFORM 映姬一言不发地集中精神……
				DATAFORM 能看到映姬背后汇聚着的灵气……
				DATAFORM 映姬面无表情地展开弹幕……
			ENDDATA
		ELSEIF TCVAR:30:364
			LOCALS = 哈呜/咿咿嗯/呀啊/嗯/啊呜/嗯嗯/呀HPH不行惹
			TXT '= TEXTR(LOCALS)
			CALL HPH_PRINT, @"「%TXT%HPHHPH」", "L"
			PRINTDATADL
				DATAFORM 映姬本想展开弹幕，但出来的却是让人泄气的娇吟……
				DATAFORM 映姬伴随着泄气的娇声放出了弹幕！\n……只有一个苦无弹飞向了%CALLNAME:MASTER%
				DATAFORM 映姬发出娇吟的同时，捂住屁股僵在了原地……
			ENDDATA
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		IF TCVAR:30:364
			TXT '= TEXTR("讨厌啊…/哈呜…/啊咿嗯…/咿呀…/嗯…/不行…/等等…")
			TXT '= \@ !相手残機 ? 啊呃呃HPH 不、不行了啦… # %TXT% \@
			CALL HPH_PRINT, @"「%TXT%HPHHPH」", "W"
		ELSE
			SELECTCASE 相手残機
				;残り残機3が表示されるのは【洽覧深識】持ちのみ
				CASE 3
					PRINTFORML 
				CASE 2
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…下一个」
					ELSE
						PRINTFORML 「如果遵守我的教诲，这点程度是理所当然的」
						PRINTFORMW 「下次我会更谨慎地试探」
					ENDIF
					PRINTFORMW 「审判『十王裁判』！」
				CASE 1
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…到此为止了」
					ELSE
						PRINTFORML 「你做得相当不错」
						PRINTFORMW 「来吧，就用这个一决胜负吧」
					ENDIF
					PRINTFORMW 「审判『最终审判』！！」
				CASE 0
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「…咳」
					ELSE
						PRINTFORMW 「干得漂亮！」
					ENDIF
			ENDSELECT
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		IF K30_CHECK_HEN_T()
			PRINTFORMW 「……我要全力以赴了」
		ELSEIF TCVAR:30:364
			PRINTFORMW 「这里就是…决胜、时刻…」
			CALL HPH_PRINT, @"「啊咿HPHHPH」", "L"
			CALL HPH_PRINT, @"「嗯HPH小腹…使不上、力气…HPH」", "W"
		ELSE
			PRINTFORMW 「这里就是决胜时刻了」
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		IF 相手残機 && TCVAR:30:364
			PRINTFORML 「你到底…想做什么呢……？」
			CALL HPH_PRINT, @"「哈啊……HPH 我没力气了…」", "W"
		ELSE
			SELECTCASE 相手残機
				CASE 4
					PRINTFORML 
				CASE 3
					IF K30_CHECK_HEN_T()
						PRINTFORML 「…照这样下去你会下地狱的」
						PRINTFORMW 「好好悔改，一心一意地积德行善吧」
					ELSE
						PRINTFORMW 「你在做什么？振作起来！」
					ENDIF
				CASE 2
					IF K30_CHECK_HEN_T()
						PRINTFORML 「…照这样下去你会下畜生道的」
						PRINTFORMW 「如果你不想受苦刑，就深刻反省，积德行善吧」
					ELSE
						PRINTFORMW 「嗯……你首先有好好听我的教诲吗？」
					ENDIF
				CASE 1
					IF K30_CHECK_HEN_T()
						PRINTFORML 「…照这样下去你会下饿鬼道的」
						PRINTFORMW 「反省你那些沉溺于欲望的日常行为，好好积德行善吧」
					ELSE
						PRINTFORMW 「虽然差一点，但也可以说是日常积累不够」
					ENDIF
				CASE 0
					;日記フラグ＠映姫様が負けた
					IF DIARY:30:4 == 0 && !TCVAR:30:364
						CALL K30_WRITE_DIARY(4)
						;過去に映姫様が勝利してたら分岐
						SIF STRCOUNT(CSTR:30:0, "勝利")
							SETBIT CFLAG:1910, 1
					ENDIF
					IF K30_CHECK_HEN_T()
						PRINTFORMW 「……姑且算是合格吧」
					ELSEIF TCVAR:30:364
						CALL HPH_PRINT, @"「哈啊…HPH 哈啊…HPH 哈啊…HPH」", "L"
						PRINTFORML 「确实，这是你的…胜利，但是…」
						PRINTFORMW 「这种胜利…对你没有任何意义…嗯啊…吧…？」
					ELSE
						PRINTFORML 「你做得很好。但这不是结束」
						PRINTFORMW 「无论是善行还是修炼，都是贵在坚持。今后也请继续精进吧」
					ENDIF
			ENDSELECT
		ENDIF
		;日記フラグ＠你が負けた
		IF 相手残機 > 0
			CALLF FIRSTTIME("勝利")
			IF DIARY:30:3 == 0 && !CFLAG:30:弾幕勝負勝利
				CALL K30_WRITE_DIARY(3)
				SIF 相手残機 == 1
					SETBIT CFLAG:1910, 0
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

