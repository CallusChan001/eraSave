    RETURNF 0
SIF TCVAR:ARG:工作開始 >= 0 && TIME < TCVAR:ARG:工作開始
    RETURNF 1
SIF TCVAR:ARG:工作開始 >= 0 && !BASE:ARG:工作量
    RETURNF -1
RETURNF 2