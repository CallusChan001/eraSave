;外出特殊文本
@M_KOJO_CUSTOM_EVENT_K77_2(ARG:3,ARG:4,ARG:5,ARG:6)
SELECTCASE TFLAG:193
	CASE 0
		;外出成功，情景信息在@OTHERREGIONS里
	CASE 1
		IF TALENT:恋人 || TALENT:恋慕
			PRINTFORML 「你看起来精神不太好啊？是犯困了吗？」
			PRINTFORML 「现在还要出门吗……算了吧」
			PRINTFORML 「你现在要做的是……回家休息！」
			PRINTFORMDW 静叶尝试着推动你
		ELSEIF TALENT:思慕 || TALENT:炮友
			PRINTFORML 「现在很晚了吧？还要去哪里呢？」
			PRINTFORML 「一般到这时候也差不多就去睡觉了啊」
			PRINTFORMDW 你揉了揉眼睛，或许静叶说的对
		ELSE
			PRINTFORML 「你现在要出去？……」
			PRINTFORMDW 静叶显得很疑惑
		ENDIF
	CASE 2
		IF TALENT:恋人 || TALENT:恋慕
			PRINTFORML 「喂喂喂，这是要上哪里去啊！？」
			PRINTFORML 「这样让别人看到了也太……%CALLNAME:MASTER%——」
			PRINTFORMDL 似乎是太招摇了，被静叶说教了一通……
			PRINTFORMW 「……哎，%CALLNAME:MASTER%，真花心」
		ELSEIF TALENT:思慕 || TALENT:炮友
			PRINTFORML 「%CALLNAME:MASTER%的朋友很多呢」
			PRINTFORML 「不过总感觉好奇怪啊……」
			PRINTFORMDW 奇怪吗？不过你也开始考虑要不要就这样出去了
		ELSE
			PRINTFORML （这人搞什么啊……）
			PRINTFORMDW 静叶看你的眼神有些讨厌了
		ENDIF
	CASE 3
		;静叶
		IF CFLAG:衰弱 || BASE:気力 == 0
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「我、我说啊%CALLNAME:MASTER%……现在还要去哪里啊？」
				PRINTFORML 「就算要赶紧去的话，也该看看我现在的样子吧」
				PRINTFORML 「啊……总之让我坐会！」
				PRINTFORMDW 你这才想起就算是静叶也会感到乏力
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「还、还要去、去哪里啊？！」
				PRINTFORMDL 静叶似乎喘不上气了
				PRINTFORMW 「先、先给我点时间歇歇好不！」
			ELSE
				PRINTFORML 「呃，你能让我一个人待一会吗？……」
				PRINTFORMDW 静叶看起来很虚弱
			ENDIF
		;自机
		ELSEIF CFLAG:MASTER:衰弱 || BASE:MASTER:気力 == 0
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「你看起来精神不太好啊？是犯困了吗？」
				PRINTFORML 「现在还要出门吗……算了吧」
				PRINTFORML 「你现在要做的是……回家休息！」
				PRINTFORMDW 静叶尝试着推动你
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「%CALLNAME:MASTER%看起来很疲惫呢，或许先休息一下比较好吧」
				PRINTFORML 「至少出门的时候看起来别太没精神哦」
				PRINTFORMDW 你揉了揉眼睛，或许静叶说的对
			ELSE
				PRINTFORML 「你现在要出去？……」
				PRINTFORMDW 静叶显得很疑惑
			ENDIF
		;其他人
		ELSE
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「那个……%CALLNAME:MASTER%，有件事想跟你说呢」
				PRINTFORML 「你是要跟别人去除对吗？你看看她的脸色……」
				PRINTFORML 「……还以为，%CALLNAME:MASTER%很关心别人呢」
				PRINTFORMDW 「如果对我也这样的话，我大概就不会……」
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「诶，你就这样带她出去吗？」
				PRINTFORML 「万、万一她突然倒地上了该怎么办啊？」
				PRINTFORMDW 唔……
			ELSE
				PRINTFORML 「你就是这么对待别人的吗……」
				PRINTFORMDW 被静叶说要先去照顾好同行者了
			ENDIF
		ENDIF
	CASE 4
		;静叶
		IF !CHARA_HOLIDAY(TARGET) && BASE:工作量
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「话说，我是不是应该要去忙了……」
				PRINTFORML 「我还要给大家带来秋天呢！现在可不能懈怠啊！」
				PRINTFORML 「%CALLNAME:MASTER%实在想约会的话……先帮我一会如何？」
				PRINTFORMDW 这就是秋神的职责啊
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「那个，%CALLNAME:MASTER%应该知道吧？我是秋神的说」
				PRINTFORML 「现在不正是秋天吗？那你说我是不是要去把这个秋天变得更加美丽呢？」
				PRINTFORMDW 嗯，没理由不去工作吗……
			ELSE
				PRINTFORML 「现在恐怕不行……」
				PRINTFORMDW 「我真的有事情要办，如果你需要谁的话，请找别人吧」
			ENDIF
		;其他人
		ELSE
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「嗯……那个，你是有事要忙对吧？」
				PRINTFORML 「不是你而是她吗？……嗯，那你就让她先做好自己的事吧」
				PRINTFORML 「要约会什么的，一定要注意别人的安排哦」
				PRINTFORMDW 看起来静叶打算等一会了
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「%CALLNAME:MASTER%，是不是忘记有谁要工作了？」
				PRINTFORML 「这样，可不太好哦……出门的时候不是应该看好日历吗？」
				PRINTFORMDW 我、我明白了……
			ELSE
				PRINTFORML 「话说你旁边那位貌似因为什么事看起来很急呢……」
				PRINTFORMDW 静叶提醒着你
			ENDIF
		ENDIF
	CASE 5
		;静叶
		IF CFLAG:態度 < 1 && CAN_IRAI_CHARA_GO_TOGATHER(TARGET)
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「那个……我们是不是还有事情要做来着？」
				PRINTFORMDL 收到了来自静叶的提醒
				PRINTFORML 「如果是去约会的话……还是先把手头上要紧的事做完吧！」
				PRINTFORMW 「做完了你想去哪里我都会跟着的！」
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「可是，%CALLNAME:MASTER%不是答应我要……」
				PRINTFORMDL 哦，忘记了
				PRINTFORMW 「所以说先去做那件事比较好吧？」
			ELSE
				PRINTFORML 「等等，首先……」
				PRINTFORMDW 看起来得先完成静叶的委托再说了
			ENDIF
		;其他人
		ELSE
			IF TALENT:恋人 || TALENT:恋慕
				PRINTFORML 「嗯……那个，你是有事要忙对吧？」
				PRINTFORML 「不是你而是她吗？……嗯，那%CALLNAME:MASTER%就快去办吧」
				PRINTFORML 「就算想找我约会，也别太亏欠别人哦」
				PRINTFORMDW 看起来静叶打算等一会了
			ELSEIF TALENT:思慕 || TALENT:炮友
				PRINTFORML 「%CALLNAME:MASTER%，是不是打算先丢掉某些事去玩啊？」
				PRINTFORML 「这样，可不太好哦……女孩子的请求可不是那种能随意丢弃的东西」
				PRINTFORMDW 我、我明白了……
			ELSE
				PRINTFORML 「话说你旁边那位貌似因为什么事看起来很急呢……」
				PRINTFORMDW 静叶提醒着你
			ENDIF
		ENDIF
	CASE 6
		IF TALENT:恋人 || TALENT:恋慕
			PRINTFORML 「诶？这个……%CALLNAME:MASTER%这样子真的好吗？」
			PRINTFORML 「如果要我捧着的话，感觉会很危险呢……」
			PRINTFORML 「稍微捏一下你应该就会散架吧？……不行不行，别出门了！」
			PRINTFORMDW 看起来是没法站在静叶的肩膀上约会了
		ELSEIF TALENT:思慕 || TALENT:炮友
			PRINTFORML 「%CALLNAME:MASTER%到底是怎么变成这样的呢？」
			PRINTFORML 「用了很神奇的道具？……总之想出门大概是做不到了」
			PRINTFORMW 「要是路上遇到老鼠或者一些昆虫的话……唔」
		ELSE
			PRINTFORML 「嗯，你是……？」
			PRINTFORMDW 试着大声对她讲话，但是她好像没有听见
		ENDIF
	CASE 99
		PRINTFORML 邀约被拒绝了
ENDSELECT
