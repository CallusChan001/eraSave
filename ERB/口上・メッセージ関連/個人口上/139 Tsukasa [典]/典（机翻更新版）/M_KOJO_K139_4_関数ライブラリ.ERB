SIF ARG < 0
	ARG = MASTER
SIF !STRLENS(ARGS)
	ARGS = %CALLNAME:ARG%
IF STRFIND(ARGS, "_") >= 0
	ARGS '= REPLACE(ARGS, "_", "")
	GOTO CUSTOM
ENDIF

SELECTCASE SPLIT_SINGLE(ARGS)
	CASE CALLNAME:ARG
		LOCALS = %CALLNAME:ARG%阁下
	CASEELSE
		$CUSTOM
		LOCALS '= IS_CHILD(ARG:0) ? SPLIT_SINGLE(ARGS) # (SPLIT_SINGLE(ARGS, 1) != "" ? SPLIT_SINGLE(ARGS, 1) # @"%CALLNAME:ARG%阁下")
ENDSELECT
RETURNF LOCALS
