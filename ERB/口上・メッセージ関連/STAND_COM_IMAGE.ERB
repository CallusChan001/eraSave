; 立絵追加リソースセット関連
@DISPLAY_COM_IMAGE(COMNO)
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS DYNAMIC リソース名
#DIM DYNAMIC COMNO
#DIMS DYNAMIC 服装
#DIMS DYNAMIC 表示形式
表示形式 = %GET_BASESTYLE(TARGET, 表示形式)%
IF CHECK_NUDE(TARGET)
	服装 = 裸
ELSE
	服装 = 服
ENDIF
CALL IMAGE_CHARA_OVERRIDE("特殊服装", TARGET)
IF RESULT:1
	服装 += RESULTS
ENDIF
リソース名 = %表示形式%_%服装%_COM{COMNO}_{NO:TARGET}
IF RM_リソースチェック(リソース名)
	CALL PRINT_IMAGE(リソース名)
;ELSEIF SHOW_BOTE(NO:TARGET)
;	CALL PRINT_IMAGE(@"ボテ_{NO:TARGET}")
ENDIF

@SHOW_BOTE(CHARA)
#LOCALSIZE 1
#LOCALSSIZE 1
#FUNCTION
#DIM CHARA
SIF CFLAG:CHARA:衣装一時変更
	RETURNF 0
SIF CFLAG:CHARA:诶嘿嘿
	RETURNF 0
SIF TEQUIP:CHARA:上半身着衣状況 == 0 || TEQUIP:CHARA:下半身着衣状況 == 0
	RETURNF 0
SIF CFLAG:CHARA:妊娠経過日数 < 40 || SELECTCOM != 306
	RETURNF 0
RETURNF 1

