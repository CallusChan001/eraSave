@EX_COMPOSE_SPRITE(CHARA, 表示形式, 服装, ARGS, ARGS:1, 差分, 乳量,素体,表情库,PAT,裸体表情差分)
#DIM DYNAMIC G_ID
#DIM DYNAMIC L_COUNT
#DIM DYNAMIC 素体COUNT
#DIM DYNAMIC 表情COUNT,2
#DIMS DYNAMIC VARIANT
#DIMS REF 素体
#DIMS REF 表情库
#DIMS REF PAT
#DIM DYNAMIC CHARA
#DIMS DYNAMIC 表示形式
#DIMS DYNAMIC 服装
#DIMS DYNAMIC 表情,2
#DIMS DYNAMIC 差分
#DIMS DYNAMIC 乳量
#DIMS REF 裸体表情差分
#DIM DYNAMIC NUDE_EXPRESSION_CHECK_PASSED
#DIM DYNAMIC HAS_MANPU
#DIMS DYNAMIC MANPU_TEMPS
#DIM DYNAMIC HAS_COMPOSED_BREATH
#DIM DYNAMIC HAS_COMPOSED_BLUSH
#LOCALSIZE 1
#LOCALSSIZE 1
素体COUNT = FINDELEMENT(素体, @"%表示形式%_%服装%")
SIF 素体COUNT == -1
	RETURN
;拼接图得不到表情索引，这里把【表情库】数组传入判定，并将判定结果的两个表情索引传给【表情】数组
CALL GET_PRE_FACETYPE(CHARA, 表示形式, 服装, 差分, 表情库, 表情)
	;DEBUGPRINTFORML 传入%素体:素体COUNT%  服装：%服装% 表情%表情:0% / %表情:1% 
FOR LOCAL, 0, 2
	;标志重置
	HAS_COMPOSED_BREATH = 0
	HAS_COMPOSED_BLUSH = 0
	NUDE_EXPRESSION_CHECK_PASSED = 0
	;表情索引
	表情COUNT:LOCAL = FINDELEMENT(表情库, 表情:LOCAL, , , 1)
	SIF LOCAL && 表情:LOCAL == ""
		BREAK
	IF 表情COUNT:LOCAL == -1
		表情COUNT:LOCAL = 0
	ENDIF
	;DEBUGPRINTFORML 初始化%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}  表情%表情:0% %表情:1% %服装%
	;要采用裸体差分的表情，会被标记采用nude后缀的pattern
	IF STRFIND(素体:素体COUNT, "裸") > -1
		SIF FINDELEMENT(裸体表情差分, @"%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%") > -1
			NUDE_EXPRESSION_CHECK_PASSED = 1
	ENDIF
	;原系统在这个位置把特效提前合成，导致叠加特效/无特效的立绘占用同一个索引。因此只要特效判定改变，就需要从头合成整套立绘。因此出现极其可笑的情形：
	;因为索引名被不同的合成差分占用，为了避免频繁读取而建立的图片缓存，反而沦为这个合成系统的障碍，系统被迫每一次都需要释放缓存以重新合成；不但没有享受到缓存的便利，反而写出了比一次性合成全部立绘更加变态辣的【反复从头合成全部立绘】的合成拼接图机制：结果便是，这套拼接图系统仅仅只处理两三套服装，对运算的压力就陡然提高。
	IF RM_リソースチェック(@"%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}")
		;DEBUGPRINTFORML 跳过%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}  表情%表情:0% %表情:1% %服装%
		RESULTS:LOCAL = %素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}
		CONTINUE
	ENDIF

	VARIANT = %\@ STRFIND(表示形式, "顔") > -1 ? faceparts # bodyparts \@%

	;compose 素体
	G_ID = 0
	CALL 画像合成(G_ID, @"{CHARA}_%素体:素体COUNT%")

	;顔合成
	L_COUNT = FINDELEMENT(PAT, @"Start_{表情COUNT:LOCAL}%COND_STR("_Nude", NUDE_EXPRESSION_CHECK_PASSED)%", , , 1)
	;照れ, on top of 素体, underneath everything else due to unique layering，现已弃用
	;IF (表情库:(表情COUNT:LOCAL) != "睡眠" && STRFIND(素体:素体COUNT, "裸") > -1) || STRCOUNT(表情库:(表情COUNT:LOCAL), "発情|性交|愛撫")
		;CALL 画像合成(G_ID, @"{CHARA}_%VARIANT%_Blush")
		;HAS_COMPOSED_BLUSH = 1
	;ENDIF
	;compose the expression
	VARSET HAS_MANPU
	VARSET MANPU_TEMPS
	L_COUNT ++
	WHILE L_COUNT < VARSIZE("PAT") || PAT:L_COUNT != @"End"
		IF STRFIND(PAT:L_COUNT, "Manpu") > -1
		;漫符先标记，等到最后合成在最上层
			HAS_MANPU = 1
			MANPU_TEMPS = %PAT:L_COUNT%
		ELSE
			;标记在表情合成利用过的特效，现已弃用
			;SIF STRFIND(PAT:L_COUNT, "Blush") > -1
			;	HAS_COMPOSED_BLUSH = 1
			;SIF STRFIND(PAT:L_COUNT, "Breath") > -1
			;	HAS_COMPOSED_BREATH = 1
			CALL 画像合成(G_ID, @"{CHARA}_%VARIANT%_%PAT:L_COUNT%")
			DEBUGPRINTFORML 第{L_COUNT}层 {CHARA}_%VARIANT%_%PAT:L_COUNT%
			;skip to nextloop if currently composing for a variant that shouldn't exist(missing resource)
			SIF RESULT == 0
				BREAK
		ENDIF
		L_COUNT ++
	WEND

	;build最上层
	;髪飾
	;SIF (CHECK_HEADDRESS(CHARA,素体:素体COUNT) || STRFIND(素体:素体COUNT, "ボロ") == -1) && RM_リソースチェック(@"{CHARA}_%VARIANT%_Headdress")
	SIF (STRFIND(素体:素体COUNT, "ボロ") == -1) && RM_リソースチェック(@"{CHARA}_%VARIANT%_Headdress")
		CALL 画像合成(G_ID, @"{CHARA}_%VARIANT%_Headdress")

	;漫符
	SIF HAS_MANPU && RM_リソースチェック(@"{CHARA}_%VARIANT%_%MANPU_TEMPS%")
		CALL 画像合成(G_ID, @"{CHARA}_%VARIANT%_%MANPU_TEMPS%")

	;吐息、颊红、汗移回特效处理，以避免难以置信的不停重建，即使特效层会重叠一份也不是问题
	;SIF CHECK_EXHALATION(CHARA) && !HAS_COMPOSED_BREATH && RM_リソースチェック(@"{CHARA}_%VARIANT%_Breath")
	;	CALL 画像合成(G_ID, @"{CHARA}_%VARIANT%_Breath")

	SPRITECREATE @"%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}", G_ID
	RESULTS:LOCAL = %素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}
	;DEBUGPRINTFORML done%素体:素体COUNT%_%表情库:(表情COUNT:LOCAL)%_{CHARA}  表情%ARGS:0% %ARGS:1% %服装%
NEXT


